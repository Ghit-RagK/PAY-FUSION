    <script>
        // Initialiser le sélecteur de pays
        const countrySelect = document.getElementById('country');
        fetch('https://restcountries.com/v3.1/all?fields=name,cca2')
            .then(response => response.json())
            .then(countries => {
                countries.sort((a, b) => a.name.common.localeCompare(b.name.common));
                countries.forEach(country => {
                    const option = document.createElement('option');
                    option.value = country.cca2;
                    option.textContent = country.name.common;
                    countrySelect.appendChild(option);
                });
            });
        
        // Initialiser le sélecteur de téléphone
        const phoneInput = document.getElementById('phone');
        const iti = window.intlTelInput(phoneInput, {
            initialCountry: "fr",
            separateDialCode: true,
            utilsScript: "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js"
        });
        
        // Gestion des étapes
        document.querySelector('.btn-next-step').addEventListener('click', () => {
            // Valider l'étape 1
            const step1 = document.querySelector('[data-step="1"]');
            const inputs = step1.querySelectorAll('input[required], select[required]');
            let valid = true;
            
            inputs.forEach(input => {
                if (!input.value.trim()) {
                    valid = false;
                    input.classList.add('error');
                } else {
                    input.classList.remove('error');
                }
            });
            
            // Validation email
            const email = document.getElementById('email');
            if (email.value && !isValidEmail(email.value)) {
                valid = false;
                email.classList.add('error');
                alert('Veuillez entrer une adresse email valide');
            }
            
            if (valid) {
                // Passer à l'étape 2
                document.querySelector('[data-step="1"]').classList.remove('active');
                document.querySelector('[data-step="2"]').classList.add('active');
                document.querySelector('.step[data-step="1"]').classList.remove('active');
                document.querySelector('.step[data-step="2"]').classList.add('active');
            }
        });
        
        document.querySelector('.btn-prev-step').addEventListener('click', () => {
            // Retour à l'étape 1
            document.querySelector('[data-step="2"]').classList.remove('active');
            document.querySelector('[data-step="1"]').classList.add('active');
            document.querySelector('.step[data-step="2"]').classList.remove('active');
            document.querySelector('.step[data-step="1"]').classList.add('active');
        });
        
        // Soumission du formulaire
        document.getElementById('registerForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            // Valider le mot de passe
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            
            if (password !== confirmPassword) {
                alert('Les mots de passe ne correspondent pas');
                return;
            }
            
            if (!checkPasswordStrength(password)) {
                alert('Le mot de passe ne respecte pas les exigences de sécurité');
                return;
            }
            
            // Récupérer les données
            const userData = {
                firstName: document.getElementById('firstName').value,
                lastName: document.getElementById('lastName').value,
                email: document.getElementById('email').value,
                phone: iti.getNumber(),
                country: document.getElementById('country').value,
                dateOfBirth: document.getElementById('dateOfBirth').value,
                password: password
            };
            
            try {
                // Inscrire l'utilisateur
                const result = await registerUser(userData);
                
                if (result.success) {
                    // Afficher l'étape de vérification SMS
                    document.querySelector('[data-step="2"]').classList.remove('active');
                    document.querySelector('[data-step="3"]').style.display = 'block';
                    document.querySelector('.step[data-step="2"]').classList.remove('active');
                    document.querySelector('.step[data-step="3"]').classList.add('active');
                    
                    // Mettre à jour le numéro de téléphone affiché
                    document.getElementById('userPhone').textContent = userData.phone;
                    
                    // Envoyer le code de vérification SMS
                    await sendVerificationSMS(userData.phone);
                } else {
                    alert('Erreur d\'inscription: ' + result.error);
                }
                
            } catch (error) {
                console.error('Erreur:', error);
                alert('Une erreur est survenue lors de l\'inscription');
            }
        });
        
        // Fonctions utilitaires
        function isValidEmail(email) {
            const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return re.test(email);
        }
        
        function moveToNext(input, nextIndex) {
            if (input.value.length === 1) {
                const nextInput = input.parentElement.querySelector(`input:nth-child(${nextIndex + 1})`);
                if (nextInput) nextInput.focus();
            }
        }
        
        async function sendVerificationSMS(phoneNumber) {
            // Simuler l'envoi SMS (à remplacer par un service réel)
            const verificationCode = Math.floor(100000 + Math.random() * 900000);
            localStorage.setItem('sms_verification_code', verificationCode);
            
            console.log(`Code de vérification pour ${phoneNumber}: ${verificationCode}`);
            alert(`Code de vérification (simulé): ${verificationCode}`);
        }
    </script>
</body>
</html>
```

10. Validation JavaScript - validation.js

```javascript
// Validation des formulaires PayFusion
class FormValidator {
    constructor() {
        this.init();
    }
    
    init() {
        this.setupPasswordValidation();
        this.setupPhoneValidation();
        this.setupDateValidation();
    }
    
    setupPasswordValidation() {
        const passwordInputs = document.querySelectorAll('input[type="password"]');
        
        passwordInputs.forEach(input => {
            input.addEventListener('input', (e) => {
                this.validatePassword(e.target.value);
                
                // Vérifier la correspondance si confirmation
                if (input.id === 'confirmPassword') {
                    const password = document.getElementById('password')?.value;
                    this.checkPasswordMatch(password, e.target.value);
                }
            });
        });
    }
    
    validatePassword(password) {
        const strengthBar = document.querySelector('.strength-bar');
        const strengthText = document.querySelector('.strength-text');
        
        if (!strengthBar || !strengthText) return;
        
        let strength = 0;
        const requirements = {
            length: password.length >= 8,
            uppercase: /[A-Z]/.test(password),
            lowercase: /[a-z]/.test(password),
            number: /[0-9]/.test(password),
            special: /[^A-Za-z0-9]/.test(password)
        };
        
        // Calculer la force
        strength = Object.values(requirements).filter(Boolean).length;
        
        // Mettre à jour la barre
        strengthBar.style.width = `${(strength / 5) * 100}%`;
        
        // Mettre à jour le texte et la couleur
        const colors = ['#FF3B30', '#FF9500', '#FFCC00', '#4CD964', '#007AFF'];
        const messages = ['Très faible', 'Faible', 'Moyen', 'Fort', 'Très fort'];
        
        strengthBar.style.background = colors[strength - 1] || '#FF3B30';
        strengthText.textContent = messages[strength - 1] || 'Très faible';
        strengthText.style.color = colors[strength - 1] || '#FF3B30';
        
        // Mettre à jour les icônes des exigences
        Object.keys(requirements).forEach((req, index) => {
            const icon = document.querySelector(`.password-requirements p:nth-child(${index + 1}) i`);
            if (icon) {
                if (requirements[req]) {
                    icon.className = 'fas fa-check-circle';
                    icon.style.color = '#4CD964';
                } else {
                    icon.className = 'fas fa-times-circle';
                    icon.style.color = '#FF3B30';
                }
            }
        });
        
        return strength >= 3; // Minimum force moyenne
    }
    
    checkPasswordMatch(password, confirmPassword) {
        const matchStatus = document.getElementById('passwordMatch');
        if (!matchStatus) return;
        
        if (!confirmPassword) {
            matchStatus.textContent = '';
            return;
        }
        
        if (password === confirmPassword) {
            matchStatus.textContent = '✓ Les mots de passe correspondent';
            matchStatus.style.color = '#4CD964';
        } else {
            matchStatus.textContent = '✗ Les mots de passe ne correspondent pas';
            matchStatus.style.color = '#FF3B30';
        }
    }
    
    setupPhoneValidation() {
        const phoneInputs = document.querySelectorAll('input[type="tel"]');
        
        phoneInputs.forEach(input => {
            input.addEventListener('blur', () => {
                this.validatePhoneNumber(input.value);
            });
        });
    }
    
    validatePhoneNumber(phone) {
        // Validation basique du numéro de téléphone
        const phoneRegex = /^[\+]?[1-9][\d]{1,14}$/;
        return phoneRegex.test(phone.replace(/\s/g, ''));
    }
    
    setupDateValidation() {
        const dateInputs = document.querySelectorAll('input[type="date"]');
        
        dateInputs.forEach(input => {
            input.addEventListener('change', () => {
                this.validateDateOfBirth(input.value);
            });
        });
    }
    
    validateDateOfBirth(date) {
        const birthDate = new Date(date);
        const today = new Date();
        const age = today.getFullYear() - birthDate.getFullYear();
        
        if (age < 18) {
            alert('Vous devez avoir au moins 18 ans pour vous inscrire');
            return false;
        }
        
        return true;
    }
    
    validateEmail(email) {
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        return emailRegex.test(email);
    }
    
    validateForm(formId) {
        const form = document.getElementById(formId);
        if (!form) return false;
        
        const inputs = form.querySelectorAll('input[required], select[required], textarea[required]');
        let isValid = true;
        
        inputs.forEach(input => {
            const value = input.value.trim();
            
            if (!value) {
                this.showError(input, 'Ce champ est requis');
                isValid = false;
            } else {
                this.removeError(input);
                
                // Validation spécifique par type
                switch(input.type) {
                    case 'email':
                        if (!this.validateEmail(value)) {
                            this.showError(input, 'Email invalide');
                            isValid = false;
                        }
                        break;
                    case 'tel':
                        if (!this.validatePhoneNumber(value)) {
                            this.showError(input, 'Numéro de téléphone invalide');
                            isValid = false;
                        }
                        break;
                    case 'password':
                        if (input.id === 'password' && !this.validatePassword(value)) {
                            this.showError(input, 'Mot de passe trop faible');
                            isValid = false;
                        }
                        break;
                }
            }
        });
        
        return isValid;
    }
    
    showError(input, message) {
        input.classList.add('error');
        
        let errorElement = input.parentElement.querySelector('.error-message');
        if (!errorElement) {
            errorElement = document.createElement('div');
            errorElement.className = 'error-message';
            input.parentElement.appendChild(errorElement);
        }
        
        errorElement.textContent = message;
        errorElement.style.display = 'block';
    }
    
    removeError(input) {
        input.classList.remove('error');
        
        const errorElement = input.parentElement.querySelector('.error-message');
        if (errorElement) {
            errorElement.style.display = 'none';
        }
    }
    
    // Validation KYC
    validateKYCFile(file, type) {
        const validTypes = ['image/jpeg', 'image/png', 'image/jpg', 'application/pdf'];
        const maxSize = 5 * 1024 * 1024; // 5MB
        
        if (!validTypes.includes(file.type)) {
            return {
                valid: false,
                message: `Format de fichier invalide pour ${type}. Formats acceptés: JPG, PNG, PDF`
            };
        }
        
        if (file.size > maxSize) {
            return {
                valid: false,
                message: `Fichier trop grand pour ${type}. Maximum 5MB`
            };
        }
        
        return { valid: true, message: 'Fichier valide' };
    }
    
    // Validation montant transaction
    validateTransactionAmount(amount, type, userBalance) {
        const minAmounts = {
            deposit: 10,
            withdrawal: 20,
            buy: 5,
            sell: 5,
            swap: 1
        };
        
        const maxAmounts = {
            deposit: 10000,
            withdrawal: 5000,
            buy: 50000,
            sell: 50000,
            swap: 10000
        };
        
        amount = parseFloat(amount);
        
        if (isNaN(amount) || amount <= 0) {
            return { valid: false, message: 'Montant invalide' };
        }
        
        if (amount < minAmounts[type]) {
            return { 
                valid: false, 
                message: `Montant minimum: $${minAmounts[type]}` 
            };
        }
        
        if (amount > maxAmounts[type]) {
            return { 
                valid: false, 
                message: `Montant maximum: $${maxAmounts[type]}` 
            };
        }
        
        if (type === 'withdrawal' && amount > userBalance) {
            return { 
                valid: false, 
                message: 'Solde insuffisant' 
            };
        }
        
        return { valid: true, message: 'Montant valide' };
    }
    
    // Validation adresse crypto
    validateCryptoAddress(address, symbol) {
        const patterns = {
            BTC: /^(bc1|[13])[a-zA-HJ-NP-Z0-9]{25,39}$/,
            ETH: /^0x[a-fA-F0-9]{40}$/,
            USDT: /^0x[a-fA-F0-9]{40}$/,
            BNB: /^(bnb1)[0-9a-z]{38}$/,
            TRX: /^T[A-Za-z1-9]{33}$/,
            SOL: /^[1-9A-HJ-NP-Za-km-z]{32,44}$/
        };
        
        if (!patterns[symbol]) {
            return { valid: true, message: 'Adresse non vérifiée' };
        }
        
        if (patterns[symbol].test(address)) {
            return { valid: true, message: 'Adresse valide' };
        } else {
            return { valid: false, message: 'Adresse invalide' };
        }
    }
}

// Initialiser le validateur
const formValidator = new FormValidator();
window.formValidator = formValidator;

// Fonctions utilitaires globales
function checkPasswordStrength(password) {
    return formValidator.validatePassword(password);
}

function validateForm(formId) {
    return formValidator.validateForm(formId);
}
```

