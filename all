8. wallet.js - Script Portefeuille

```javascript
// Gestion du portefeuille crypto
class WalletManager {
    constructor() {
        this.userId = null;
        this.balances = {};
        this.init();
    }

    async init() {
        await this.loadWalletData();
        this.setupEventListeners();
        this.updateDisplay();
    }

    async loadWalletData() {
        const user = auth.currentUser;
        if (!user) return;
        
        this.userId = user.uid;
        
        try {
            const userDoc = await db.collection('users').doc(this.userId).get();
            if (userDoc.exists) {
                this.balances = userDoc.data().balance || {};
                this.updateDisplay();
            }
        } catch (error) {
            console.error('Erreur chargement portefeuille:', error);
        }
    }

    updateDisplay() {
        // Mettre à jour l'UI avec les soldes
        Object.entries(this.balances).forEach(([currency, amount]) => {
            const element = document.getElementById(`balance-${currency}`);
            if (element) {
                element.textContent = amount.toFixed(6);
            }
        });
    }

    async deposit(symbol, amount) {
        // Logique de dépôt
    }

    async withdraw(symbol, amount, address) {
        // Logique de retrait
    }

    setupEventListeners() {
        // Écouteurs pour les boutons dépôt/retrait
    }
}
```

9. main.js - Script Principal

```javascript
// Script principal PayFusion
document.addEventListener('DOMContentLoaded', function() {
    // Initialiser l'application
    initApp();
    
    // Gestion de la navigation
    setupNavigation();
    
    // Gestion des modals
    setupModals();
    
    // Initialiser les composants
    initComponents();
});

function initApp() {
    // Vérifier l'authentification
    auth.onAuthStateChanged((user) => {
        if (user) {
            // Utilisateur connecté
            showUserElements();
            updateUserInfo(user);
        } else {
            // Utilisateur déconnecté
            showGuestElements();
        }
    });
}

function setupNavigation() {
    // Navigation responsive
    const menuBtn = document.querySelector('.mobile-menu-btn');
    const navMenu = document.querySelector('.nav-menu');
    
    if (menuBtn) {
        menuBtn.addEventListener('click', () => {
            navMenu.classList.toggle('show');
        });
    }
}

function setupModals() {
    // Gestion des modals
    document.querySelectorAll('[data-modal]').forEach(btn => {
        btn.addEventListener('click', () => {
            const modalId = btn.dataset.modal;
            const modal = document.getElementById(modalId);
            if (modal) {
                modal.style.display = 'block';
            }
        });
    });
    
    // Fermer modals
    document.querySelectorAll('.close-modal').forEach(btn => {
        btn.addEventListener('click', () => {
            btn.closest('.modal').style.display = 'none';
        });
    });
}

function initComponents() {
    // Initialiser tous les composants UI
    initTooltips();
    initNotifications();
    initDarkMode();
}

function showUserElements() {
    document.querySelectorAll('.user-only').forEach(el => {
        el.style.display = 'block';
    });
    document.querySelectorAll('.guest-only').forEach(el => {
        el.style.display = 'none';
    });
}

function showGuestElements() {
    document.querySelectorAll('.user-only').forEach(el => {
        el.style.display = 'none';
    });
    document.querySelectorAll('.guest-only').forEach(el => {
        el.style.display = 'block';
    });
}

function updateUserInfo(user) {
    // Mettre à jour les informations utilisateur dans l'UI
    const userElements = document.querySelectorAll('[data-user-info]');
    userElements.forEach(el => {
        const field = el.dataset.userInfo;
        if (field === 'email') {
            el.textContent = user.email;
        } else if (field === 'name') {
            el.textContent = user.displayName || user.email.split('@')[0];
        }
    });
}
```

10. assets/js/auth.js (pas firebase/auth.js)

```javascript
// Gestion de l'authentification côté client
class AuthManager {
    constructor() {
        this.init();
    }

    init() {
        this.setupForms();
        this.setupPasswordReset();
        this.setupSessionManagement();
    }

    setupForms() {
        // Formulaire de connexion
        const loginForm = document.getElementById('loginForm');
        if (loginForm) {
            loginForm.addEventListener('submit', async (e) => {
                e.preventDefault();
                await this.handleLogin();
            });
        }

        // Formulaire d'inscription
        const registerForm = document.getElementById('registerForm');
        if (registerForm) {
            registerForm.addEventListener('submit', async (e) => {
                e.preventDefault();
                await this.handleRegister();
            });
        }
    }

    async handleLogin() {
        const email = document.getElementById('loginEmail').value;
        const password = document.getElementById('loginPassword').value;
        
        try {
            const userCredential = await auth.signInWithEmailAndPassword(email, password);
            const user = userCredential.user;
            
            // Vérifier si email vérifié
            if (!user.emailVerified) {
                this.showWarning('Veuillez vérifier votre email avant de vous connecter');
                return;
            }
            
            // Redirection
            const redirect = localStorage.getItem('redirect_after_login') || 'dashboard.html';
            window.location.href = redirect;
            
        } catch (error) {
            this.showError(this.getErrorMessage(error.code));
        }
    }

    async handleRegister() {
        const email = document.getElementById('registerEmail').value;
        const password = document.getElementById('registerPassword').value;
        const confirmPassword = document.getElementById('confirmPassword').value;
        
        // Validation
        if (password !== confirmPassword) {
            this.showError('Les mots de passe ne correspondent pas');
            return;
        }
        
        try {
            const userCredential = await auth.createUserWithEmailAndPassword(email, password);
            const user = userCredential.user;
            
            // Envoyer email de vérification
            await user.sendEmailVerification();
            
            // Créer le profil utilisateur dans Firestore
            await this.createUserProfile(user.uid, email);
            
            this.showSuccess('Inscription réussie ! Vérifiez votre email.');
            
            // Redirection
            setTimeout(() => {
                window.location.href = 'login.html';
            }, 3000);
            
        } catch (error) {
            this.showError(this.getErrorMessage(error.code));
        }
    }

    async createUserProfile(userId, email) {
        try {
            await db.collection('users').doc(userId).set({
                email: email,
                createdAt: firebase.firestore.FieldValue.serverTimestamp(),
                kycStatus: 'not_started',
                balance: {
                    usd: 0,
                    btc: 0,
                    eth: 0
                }
            });
        } catch (error) {
            console.error('Erreur création profil:', error);
        }
    }

    setupPasswordReset() {
        const resetForm = document.getElementById('resetPasswordForm');
        if (resetForm) {
            resetForm.addEventListener('submit', async (e) => {
                e.preventDefault();
                await this.handlePasswordReset();
            });
        }
    }

    async handlePasswordReset() {
        const email = document.getElementById('resetEmail').value;
        
        try {
            await auth.sendPasswordResetEmail(email);
            this.showSuccess('Email de réinitialisation envoyé !');
        } catch (error) {
            this.showError(this.getErrorMessage(error.code));
        }
    }

    setupSessionManagement() {
        // Vérifier la session périodiquement
        setInterval(() => {
            this.checkSession();
        }, 60000); // Toutes les minutes
    }

    checkSession() {
        const user = auth.currentUser;
        if (user) {
            user.getIdTokenResult().then((tokenResult) => {
                // Vérifier si le token a expiré
                if (new Date(tokenResult.expirationTime) < new Date()) {
                    this.refreshToken();
                }
            });
        }
    }

    async refreshToken() {
        try {
            const user = auth.currentUser;
            if (user) {
                await user.getIdToken(true);
            }
        } catch (error) {
            console.error('Erreur rafraîchissement token:', error);
        }
    }

    // Méthodes utilitaires
    getErrorMessage(errorCode) {
        const messages = {
            'auth/invalid-email': 'Email invalide',
            'auth/user-disabled': 'Compte désactivé',
            'auth/user-not-found': 'Utilisateur non trouvé',
            'auth/wrong-password': 'Mot de passe incorrect',
            'auth/email-already-in-use': 'Email déjà utilisé',
            'auth/weak-password': 'Mot de passe trop faible',
            'auth/operation-not-allowed': 'Opération non autorisée',
            'auth/too-many-requests': 'Trop de tentatives. Réessayez plus tard',
            'auth/network-request-failed': 'Erreur réseau'
        };
        
        return messages[errorCode] || 'Une erreur est survenue';
    }

    showError(message) {
        // Afficher une notification d'erreur
        const notification = document.createElement('div');
        notification.className = 'notification error';
        notification.innerHTML = `
            <i class="fas fa-exclamation-circle"></i>
            <span>${message}</span>
            <button class="close-notification"><i class="fas fa-times"></i></button>
        `;
        
        document.body.appendChild(notification);
        
        // Auto-remove
        setTimeout(() => {
            notification.remove();
        }, 5000);
    }

    showSuccess(message) {
        // Afficher une notification de succès
        const notification = document.createElement('div');
        notification.className = 'notification success';
        notification.innerHTML = `
            <i class="fas fa-check-circle"></i>
            <span>${message}</span>
            <button class="close-notification"><i class="fas fa-times"></i></button>
        `;
        
        document.body.appendChild(notification);
        
        setTimeout(() => {
            notification.remove();
        }, 5000);
    }

    showWarning(message) {
        // Afficher un avertissement
        const notification = document.createElement('div');
        notification.className = 'notification warning';
        notification.innerHTML = `
            <i class="fas fa-exclamation-triangle"></i>
            <span>${message}</span>
            <button class="close-notification"><i class="fas fa-times"></i></button>
        `;
        
        document.body.appendChild(notification);
        
        setTimeout(() => {
            notification.remove();
        }, 5000);
    }
}

// Initialiser le gestionnaire d'authentification
const authManager = new AuthManager();
window.authManager = authManager;
```

