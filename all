    <!-- Scripts -->
    <script src="firebase/firebase-config.js"></script>
    <script src="assets/js/wallet.js"></script>
    <script src="assets/js/crypto-api.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        class WalletManager {
            constructor() {
                this.init();
            }

            async init() {
                await this.loadWalletData();
                this.setupEventListeners();
                this.initBalanceChart();
            }

            async loadWalletData() {
                const user = auth.currentUser;
                if (!user) {
                    window.location.href = 'login.html';
                    return;
                }

                try {
                    // Charger les données utilisateur
                    const userDoc = await db.collection('users').doc(user.uid).get();
                    const userData = userDoc.data();

                    // Calculer la balance totale
                    let totalBalance = 0;
                    const balances = userData.balance || {};

                    // Convertir chaque crypto en USD
                    for (const [symbol, amount] of Object.entries(balances)) {
                        if (symbol === 'usd') {
                            totalBalance += amount;
                        } else {
                            const crypto = cryptoAPI.supportedCryptos.find(
                                c => c.symbol.toLowerCase() === symbol
                            );
                            if (crypto && cryptoAPI.cryptoPrices[crypto.id]) {
                                totalBalance += amount * cryptoAPI.cryptoPrices[crypto.id].usd;
                            }
                        }
                    }

                    // Mettre à jour l'affichage
                    document.getElementById('totalBalanceAmount').textContent = 
                        `$${totalBalance.toLocaleString(undefined, { minimumFractionDigits: 2 })}`;

                    // Afficher les cryptos du portefeuille
                    this.displayWalletCryptos(balances);

                    // Charger les transactions
                    await this.loadTransactions(user.uid);

                    // Générer les adresses de dépôt
                    this.generateDepositAddresses();

                } catch (error) {
                    console.error('Erreur chargement portefeuille:', error);
                }
            }

            displayWalletCryptos(balances) {
                const container = document.getElementById('cryptoWalletGrid');
                if (!container) return;

                container.innerHTML = '';

                // Trier par valeur décroissante
                const sortedEntries = Object.entries(balances).sort(([, a], [, b]) => b - a);

                sortedEntries.forEach(([symbol, amount]) => {
                    if (amount <= 0) return;

                    const crypto = cryptoAPI.supportedCryptos.find(
                        c => c.symbol.toLowerCase() === symbol
                    );

                    if (!crypto) return;

                    const priceData = cryptoAPI.cryptoPrices[crypto.id];
                    const value = priceData ? amount * priceData.usd : 0;
                    const change24h = priceData ? priceData.usd_24h_change : 0;

                    const card = document.createElement('div');
                    card.className = 'crypto-card';
                    card.innerHTML = `
                        <div class="crypto-header">
                            <div class="crypto-icon" style="background-color: ${crypto.color}">
                                ${crypto.symbol.charAt(0)}
                            </div>
                            <div class="crypto-info">
                                <h4>${crypto.name}</h4>
                                <span>${crypto.symbol}</span>
                            </div>
                            <button class="crypto-menu">
                                <i class="fas fa-ellipsis-v"></i>
                            </button>
                        </div>
                        <div class="crypto-balance">
                            <div class="balance-amount">
                                <strong>${amount.toFixed(6)}</strong>
                                <span>$${value.toLocaleString(undefined, { minimumFractionDigits: 2 })}</span>
                            </div>
                            <div class="balance-change ${change24h >= 0 ? 'positive' : 'negative'}">
                                ${change24h >= 0 ? '+' : ''}${change24h.toFixed(2)}%
                            </div>
                        </div>
                        <div class="crypto-actions">
                            <button class="btn-action" onclick="walletManager.depositCrypto('${crypto.symbol}')">
                                <i class="fas fa-plus"></i> Dépôt
                            </button>
                            <button class="btn-action" onclick="walletManager.withdrawCrypto('${crypto.symbol}')">
                                <i class="fas fa-minus"></i> Retrait
                            </button>
                            <button class="btn-action" onclick="walletManager.swapCrypto('${crypto.symbol}')">
                                <i class="fas fa-exchange-alt"></i> Échanger
                            </button>
                        </div>
                    `;

                    container.appendChild(card);
                });
            }

            async loadTransactions(userId) {
                try {
                    const transactionsRef = db.collection('transactions')
                        .where('userId', '==', userId)
                        .orderBy('timestamp', 'desc')
                        .limit(10);

                    const snapshot = await transactionsRef.get();
                    this.displayTransactions(snapshot);

                } catch (error) {
                    console.error('Erreur chargement transactions:', error);
                }
            }

            displayTransactions(snapshot) {
                const container = document.getElementById('transactionsList');
                if (!container) return;

                container.innerHTML = '';

                snapshot.forEach(doc => {
                    const data = doc.data();
                    const transaction = document.createElement('div');
                    transaction.className = `transaction-item ${data.type}`;

                    let icon = 'fa-exchange-alt';
                    let typeText = 'Échange';
                    let amountClass = '';

                    switch(data.type) {
                        case 'deposit':
                            icon = 'fa-arrow-down';
                            typeText = 'Dépôt';
                            amountClass = 'positive';
                            break;
                        case 'withdrawal':
                            icon = 'fa-arrow-up';
                            typeText = 'Retrait';
                            amountClass = 'negative';
                            break;
                        case 'buy':
                            icon = 'fa-shopping-cart';
                            typeText = 'Achat';
                            amountClass = 'negative';
                            break;
                        case 'sell':
                            icon = 'fa-money-bill-wave';
                            typeText = 'Vente';
                            amountClass = 'positive';
                            break;
                    }

                    const date = data.timestamp?.toDate();
                    const formattedDate = date ? date.toLocaleDateString() : 'N/A';

                    transaction.innerHTML = `
                        <div class="transaction-icon">
                            <i class="fas ${icon}"></i>
                        </div>
                        <div class="transaction-details">
                            <h4>${typeText} ${data.symbol || ''}</h4>
                            <span>${data.status || 'En attente'} • ${formattedDate}</span>
                        </div>
                        <div class="transaction-amount ${amountClass}">
                            ${data.type === 'withdrawal' || data.type === 'buy' ? '-' : '+'}
                            $${Math.abs(data.amount || data.total || 0).toLocaleString()}
                        </div>
                    `;

                    container.appendChild(transaction);
                });
            }

            generateDepositAddresses() {
                const container = document.querySelector('.addresses-grid');
                if (!container) return;

                container.innerHTML = '';

                const mainCryptos = ['BTC', 'ETH', 'USDT', 'BNB', 'TRX', 'SOL'];

                mainCryptos.forEach(symbol => {
                    const address = cryptoAPI.getDepositAddress(symbol);
                    
                    const addressCard = document.createElement('div');
                    addressCard.className = 'address-card';
                    addressCard.innerHTML = `
                        <div class="address-header">
                            <div class="address-icon">
                                ${symbol.charAt(0)}
                            </div>
                            <div class="address-info">
                                <h4>${symbol}</h4>
                                <span>Adresse de dépôt</span>
                            </div>
                            <button class="btn-copy" data-address="${address}">
                                <i class="fas fa-copy"></i>
                            </button>
                        </div>
                        <div class="address-value">
                            <code>${address}</code>
                        </div>
                        <div class="address-qr">
                            <!-- QR Code généré dynamiquement -->
                        </div>
                    `;

                    container.appendChild(addressCard);
                });
            }

            initBalanceChart() {
                const ctx = document.getElementById('balanceChart')?.getContext('2d');
                if (!ctx) return;

                new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: ['Jan', 'Fév', 'Mar', 'Avr', 'Mai', 'Jun', 'Jul'],
                        datasets: [{
                            label: 'Balance (USD)',
                            data: [1000, 2500, 1800, 3200, 2800, 4200, 5000],
                            borderColor: 'rgba(255, 215, 0, 1)',
                            backgroundColor: 'rgba(255, 215, 0, 0.1)',
                            tension: 0.4,
                            fill: true
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                display: false
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                grid: {
                                    color: 'rgba(255, 255, 255, 0.1)'
                                },
                                ticks: {
                                    color: 'rgba(255, 255, 255, 0.7)'
                                }
                            },
                            x: {
                                grid: {
                                    color: 'rgba(255, 255, 255, 0.1)'
                                },
                                ticks: {
                                    color: 'rgba(255, 255, 255, 0.7)'
                                }
                            }
                        }
                    }
                });
            }

            setupEventListeners() {
                // Boutons d'action
                document.getElementById('depositBtn')?.addEventListener('click', () => {
                    this.openModal('depositModal');
                });

                document.getElementById('withdrawBtn')?.addEventListener('click', () => {
                    this.openModal('withdrawModal');
                });

                document.getElementById('swapBtn')?.addEventListener('click', () => {
                    this.openModal('swapModal');
                });

                document.getElementById('sendBtn')?.addEventListener('click', () => {
                    this.openModal('sendModal');
                });

                // Boutons de copie d'adresse
                document.addEventListener('click', (e) => {
                    if (e.target.closest('.btn-copy')) {
                        const address = e.target.closest('.btn-copy').dataset.address;
                        this.copyToClipboard(address);
                    }
                });

                // Fermer modals
                document.querySelectorAll('.close-modal').forEach(btn => {
                    btn.addEventListener('click', () => {
                        btn.closest('.modal').style.display = 'none';
                    });
                });

                // Fermer modals en cliquant à l'extérieur
                window.addEventListener('click', (e) => {
                    if (e.target.classList.contains('modal')) {
                        e.target.style.display = 'none';
                    }
                });
            }

            openModal(modalId) {
                const modal = document.getElementById(modalId);
                if (modal) {
                    modal.style.display = 'block';
                }
            }

            async copyToClipboard(text) {
                try {
                    await navigator.clipboard.writeText(text);
                    this.showNotification('Adresse copiée dans le presse-papier', 'success');
                } catch (error) {
                    console.error('Erreur copie:', error);
                    this.showNotification('Erreur lors de la copie', 'error');
                }
            }

            showNotification(message, type) {
                // Implémentation de notification
                alert(message); // Temporaire
            }

            // Méthodes d'action
            depositCrypto(symbol) {
                alert(`Dépôt ${symbol}`);
                // Implémenter la logique de dépôt
            }

            withdrawCrypto(symbol) {
                alert(`Retrait ${symbol}`);
                // Implémenter la logique de retrait
            }

            swapCrypto(symbol) {
                alert(`Échange ${symbol}`);
                // Implémenter la logique d'échange
            }
        }

        // Initialiser le gestionnaire de portefeuille
        const walletManager = new WalletManager();
        window.walletManager = walletManager;
    </script>
</body>
</html>
```

