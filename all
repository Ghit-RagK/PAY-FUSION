15. Script d'Authentification - auth.js

```javascript
// Gestion d'Authentification PayFusion
class AuthManager {
    constructor() {
        this.init();
    }
    
    init() {
        this.setupAuthStateListener();
        this.setupPasswordReset();
        this.setupLogout();
        this.setupSessionManagement();
    }
    
    setupAuthStateListener() {
        auth.onAuthStateChanged(async (user) => {
            if (user) {
                await this.handleUserLogin(user);
            } else {
                this.handleUserLogout();
            }
        });
    }
    
    async handleUserLogin(user) {
        try {
            // Mettre à jour le dernier login
            await db.collection('users').doc(user.uid).update({
                lastLogin: firebase.firestore.FieldValue.serverTimestamp(),
                isOnline: true
            });
            
            // Vérifier l'email
            if (!user.emailVerified) {
                this.showEmailVerificationWarning();
            }
            
            // Vérifier le statut KYC
            const userDoc = await db.collection('users').doc(user.uid).get();
            const userData = userDoc.data();
            
            if (!userData.kycVerified) {
                this.showKYCVerificationPrompt();
            }
            
            // Mettre à jour l'UI
            this.updateUIForLoggedInUser(user);
            
            // Vérifier si admin
            if (user.email === 'payfusion@admin.com') {
                this.enableAdminFeatures();
            }
            
            // Initialiser les notifications
            this.initUserNotifications(user);
            
        } catch (error) {
            console.error('Erreur gestion connexion:', error);
        }
    }
    
    handleUserLogout() {
        // Mettre à jour l'UI
        this.updateUIForLoggedOutUser();
        
        // Nettoyer les données locales
        this.clearLocalData();
        
        // Rediriger si nécessaire
        if (window.location.pathname.includes('dashboard')) {
            window.location.href = 'login.html';
        }
    }
    
    updateUIForLoggedInUser(user) {
        // Cacher boutons connexion/inscription
        const loginBtn = document.querySelector('.btn-login');
        const registerBtn = document.querySelector('.btn-register');
        
        if (loginBtn) loginBtn.style.display = 'none';
        if (registerBtn) registerBtn.style.display = 'none';
        
        // Afficher menu utilisateur
        const userMenu = document.querySelector('.user-menu');
        if (userMenu) {
            userMenu.style.display = 'flex';
            
            // Mettre à jour l'avatar et le nom
            const userName = userMenu.querySelector('.user-name');
            const userAvatar = userMenu.querySelector('#userAvatar');
            
            if (userName) {
                userName.textContent = user.displayName || user.email.split('@')[0];
            }
            
            if (userAvatar) {
                // Charger l'avatar depuis Firestore
                this.loadUserAvatar(user.uid, userAvatar);
            }
        }
        
        // Mettre à jour le statut en ligne
        document.body.classList.add('user-logged-in');
    }
    
    updateUIForLoggedOutUser() {
        // Afficher boutons connexion/inscription
        const loginBtn = document.querySelector('.btn-login');
        const registerBtn = document.querySelector('.btn-register');
        
        if (loginBtn) loginBtn.style.display = 'flex';
        if (registerBtn) registerBtn.style.display = 'flex';
        
        // Cacher menu utilisateur
        const userMenu = document.querySelector('.user-menu');
        if (userMenu) userMenu.style.display = 'none';
        
        // Cacher admin panel
        const adminPanel = document.querySelector('.admin-access');
        if (adminPanel) adminPanel.style.display = 'none';
        
        // Mettre à jour le statut
        document.body.classList.remove('user-logged-in');
    }
    
    async loadUserAvatar(userId, imgElement) {
        try {
            // Vérifier dans Firestore
            const userDoc = await db.collection('users').doc(userId).get();
            const userData = userDoc.data();
            
            if (userData?.avatarUrl) {
                imgElement.src = userData.avatarUrl;
            } else {
                // Générer avatar par défaut
                const initials = this.getUserInitials(userData);
                this.generateAvatar(initials, imgElement);
            }
        } catch (error) {
            console.error('Erreur chargement avatar:', error);
        }
    }
    
    getUserInitials(userData) {
        if (userData?.firstName && userData?.lastName) {
            return `${userData.firstName.charAt(0)}${userData.lastName.charAt(0)}`.toUpperCase();
        }
        return 'U';
    }
    
    generateAvatar(initials, imgElement) {
        // Créer un canvas pour l'avatar
        const canvas = document.createElement('canvas');
        canvas.width = 100;
        canvas.height = 100;
        const ctx = canvas.getContext('2d');
        
        // Couleur basée sur les initiales
        const colors = [
            '#FF6B6B', '#4ECDC4', '#FFD166', '#06D6A0',
            '#118AB2', '#073B4C', '#7209B7', '#F72585'
        ];
        const colorIndex = initials.charCodeAt(0) % colors.length;
        
        // Dessiner l'avatar
        ctx.fillStyle = colors[colorIndex];
        ctx.fillRect(0, 0, 100, 100);
        
        // Ajouter les initiales
        ctx.fillStyle = '#FFFFFF';
        ctx.font = 'bold 40px Arial';
        ctx.textAlign = 'center';
        ctx.textBaseline = 'middle';
        ctx.fillText(initials, 50, 50);
        
        // Convertir en URL
        imgElement.src = canvas.toDataURL();
    }
    
    setupPasswordReset() {
        const resetForm = document.getElementById('resetPasswordForm');
        if (resetForm) {
            resetForm.addEventListener('submit', async (e) => {
                e.preventDefault();
                await this.handlePasswordReset();
            });
        }
    }
    
    async handlePasswordReset() {
        const emailInput = document.getElementById('resetEmail');
        const email = emailInput.value.trim();
        
        if (!this.validateEmail(email)) {
            this.showError('Email invalide');
            return;
        }
        
        try {
            await auth.sendPasswordResetEmail(email);
            this.showSuccess('Email de réinitialisation envoyé !');
            
            // Rediriger après 3 secondes
            setTimeout(() => {
                window.location.href = 'login.html';
            }, 3000);
            
        } catch (error) {
            console.error('Erreur réinitialisation:', error);
            this.showError(this.getErrorMessage(error.code));
        }
    }
    
    setupLogout() {
        const logoutBtn = document.getElementById('logoutBtn');
        if (logoutBtn) {
            logoutBtn.addEventListener('click', async () => {
                await this.logoutUser();
            });
        }
    }
    
    async logoutUser() {
        try {
            // Mettre à jour le statut hors ligne
            const user = auth.currentUser;
            if (user) {
                await db.collection('users').doc(user.uid).update({
                    isOnline: false,
                    lastSeen: firebase.firestore.FieldValue.serverTimestamp()
                });
            }
            
            // Déconnexion Firebase
            await auth.signOut();
            
            // Nettoyer localStorage
            localStorage.removeItem('payfusion_user_token');
            localStorage.removeItem('payfusion_user_email');
            localStorage.removeItem('payfusion_admin');
            
            // Redirection
            window.location.href = 'index.html';
            
        } catch (error) {
            console.error('Erreur déconnexion:', error);
            this.showError('Erreur lors de la déconnexion');
        }
    }
    
    setupSessionManagement() {
        // Vérifier la session toutes les minutes
        setInterval(() => {
            this.checkSession();
        }, 60000);
        
        // Écouter l'inactivité
        this.setupInactivityTimer();
    }
    
    checkSession() {
        const user = auth.currentUser;
        if (user) {
            user.getIdTokenResult().then((tokenResult) => {
                // Vérifier si le token a expiré
                if (tokenResult.expirationTime < Date.now()) {
                    this.refreshToken();
                }
            });
        }
    }
    
    async refreshToken() {
        try {
            const user = auth.currentUser;
            if (user) {
                await user.getIdToken(true);
                console.log('Token rafraîchi avec succès');
            }
        } catch (error) {
            console.error('Erreur rafraîchissement token:', error);
        }
    }
    
    setupInactivityTimer() {
        let timeout;
        const resetTimer = () => {
            clearTimeout(timeout);
            // Déconnexion après 30 minutes d'inactivité
            timeout = setTimeout(() => {
                if (auth.currentUser) {
                    this.logoutUser();
                }
            }, 30 * 60 * 1000); // 30 minutes
        };
        
        // Réinitialiser le timer sur les événements utilisateur
        ['click', 'mousemove', 'keypress', 'scroll', 'touchstart'].forEach(event => {
            document.addEventListener(event, resetTimer);
        });
        
        resetTimer();
    }
    
    async initUserNotifications(user) {
        try {
            // Demander la permission pour les notifications
            if ('Notification' in window && Notification.permission === 'default') {
                const permission = await Notification.requestPermission();
                
                if (permission === 'granted') {
                    this.setupPushNotifications(user);
                }
            }
            
            // Vérifier les notifications non lues
            await this.checkUnreadNotifications(user.uid);
            
        } catch (error) {
            console.error('Erreur notifications:', error);
        }
    }
    
    async setupPushNotifications(user) {
        // Enregistrer le service worker pour les notifications push
        if ('serviceWorker' in navigator) {
            try {
                const registration = await navigator.serviceWorker.register('/sw.js');
                console.log('Service Worker enregistré:', registration);
                
                // Souscrire aux notifications push
                const subscription = await registration.pushManager.subscribe({
                    userVisibleOnly: true,
                    applicationServerKey: this.urlBase64ToUint8Array('VOTRE_CLE_PUBLIQUE_VAPID')
                });
                
                // Enregistrer la subscription dans Firestore
                await db.collection('users').doc(user.uid).collection('pushSubscriptions').add({
                    subscription: subscription,
                    createdAt: firebase.firestore.FieldValue.serverTimestamp()
                });
                
            } catch (error) {
                console.error('Erreur Service Worker:', error);
            }
        }
    }
    
    urlBase64ToUint8Array(base64String) {
        const padding = '='.repeat((4 - base64String.length % 4) % 4);
        const base64 = (base64String + padding)
            .replace(/\-/g, '+')
            .replace(/_/g, '/');
        
        const rawData = window.atob(base64);
        const outputArray = new Uint8Array(rawData.length);
        
        for (let i = 0; i < rawData.length; ++i) {
            outputArray[i] = rawData.charCodeAt(i);
        }
        return outputArray;
    }
    
    async checkUnreadNotifications(userId) {
        const notificationsRef = db.collection('users').doc(userId)
            .collection('notifications')
            .where('read', '==', false)
            .orderBy('createdAt', 'desc')
            .limit(10);
        
        const snapshot = await notificationsRef.get();
        
        if (!snapshot.empty) {
            this.showNotificationBadge(snapshot.size);
        }
    }
    
    showNotificationBadge(count) {
        const badge = document.createElement('div');
        badge.className = 'notification-badge';
        badge.textContent = count > 99 ? '99+' : count;
        badge.style.cssText = `
            position: fixed;
            top: 20px;
            right: 20px;
            background: var(--error-color);
            color: white;
            width: 24px;
            height: 24px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.8rem;
            font-weight: bold;
            z-index: 10000;
            cursor: pointer;
        `;
        
        badge.addEventListener('click', () => {
            window.location.href = 'notifications.html';
        });
        
        document.body.appendChild(badge);
    }
    
    showEmailVerificationWarning() {
        const warning = document.createElement('div');
        warning.className = 'email-verification-warning';
        warning.innerHTML = `
            <div class="warning-content">
                <i class="fas fa-envelope"></i>
                <span>Veuillez vérifier votre adresse email pour accéder à toutes les fonctionnalités.</span>
                <button id="resendVerification">Renvoyer l'email</button>
                <button id="dismissWarning">Fermer</button>
            </div>
        `;
        
        document.body.appendChild(warning);
        
        // Événements
        document.getElementById('resendVerification')?.addEventListener('click', () => {
            this.resendVerificationEmail();
        });
        
        document.getElementById('dismissWarning')?.addEventListener('click', () => {
            warning.remove();
        });
    }
    
    async resendVerificationEmail() {
        try {
            const user = auth.currentUser;
            if (user) {
                await user.sendEmailVerification();
                this.showSuccess('Email de vérification envoyé !');
            }
        } catch (error) {
            console.error('Erreur envoi email vérification:', error);
            this.showError('Erreur lors de l\'envoi de l\'email');
        }
    }
    
    showKYCVerificationPrompt() {
        // Afficher seulement si l'utilisateur n'a pas encore vu le prompt aujourd'hui
        const lastPrompt = localStorage.getItem('kyc_prompt_last_shown');
        const today = new Date().toDateString();
        
        if (lastPrompt !== today) {
            const prompt = document.createElement('div');
            prompt.className = 'kyc-verification-prompt';
            prompt.innerHTML = `
                <div class="prompt-content">
                    <i class="fas fa-id-card"></i>
                    <div>
                        <h4>Vérification KYC Requise</h4>
                        <p>Complétez votre vérification KYC pour débloquer toutes les fonctionnalités.</p>
                    </div>
                    <a href="kyc-verification.html" class="btn-kyc">Commencer la vérification</a>
                    <button class="btn-dismiss">Plus tard</button>
                </div>
            `;
            
            document.body.appendChild(prompt);
            
            localStorage.setItem('kyc_prompt_last_shown', today);
            
            // Événements
            prompt.querySelector('.btn-dismiss').addEventListener('click', () => {
                prompt.remove();
            });
        }
    }
    
    enableAdminFeatures() {
        const adminPanel = document.querySelector('.admin-access');
        if (adminPanel) {
            adminPanel.style.display = 'block';
            
            // Sauvegarder le statut admin
            localStorage.setItem('payfusion_admin', 'true');
            
            // Ajouter des styles spéciaux pour l'admin
            document.body.classList.add('admin-mode');
        }
    }
    
    clearLocalData() {
        // Nettoyer toutes les données locales
        const keys = [
            'payfusion_user_token',
            'payfusion_user_email',
            'payfusion_admin',
            'kyc_prompt_last_shown',
            'last_notification_check'
        ];
        
        keys.forEach(key => localStorage.removeItem(key));
        
        // Nettoyer sessionStorage
        sessionStorage.clear();
    }
    
    // Méthodes utilitaires
    validateEmail(email) {
        const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        return re.test(email);
    }
    
    getErrorMessage(errorCode) {
        const messages = {
            'auth/invalid-email': 'Email invalide',
            'auth/user-disabled': 'Compte désactivé',
            'auth/user-not-found': 'Utilisateur non trouvé',
            'auth/wrong-password': 'Mot de passe incorrect',
            'auth/email-already-in-use': 'Email déjà utilisé',
            'auth/weak-password': 'Mot de passe trop faible',
            'auth/operation-not-allowed': 'Opération non autorisée',
            'auth/too-many-requests': 'Trop de tentatives. Réessayez plus tard',
            'auth/network-request-failed': 'Erreur réseau',
            'auth/requires-recent-login': 'Veuillez vous reconnecter'
        };
        
        return messages[errorCode] || 'Une erreur est survenue';
    }
    
    showError(message) {
        this.showNotification(message, 'error');
    }
    
    showSuccess(message) {
        this.showNotification(message, 'success');
    }
    
    showNotification(message, type = 'info') {
        const notification = document.createElement('div');
        notification.className = `auth-notification ${type}`;
        notification.innerHTML = `
            <div class="notification-content">
                <i class="fas fa-${type === 'success' ? 'check' : 'exclamation'}"></i>
                <span>${message}</span>
                <button class="close-notification"><i class="fas fa-times"></i></button>
            </div>
        `;
        
        document.body.appendChild(notification);
        
        // Auto-remove après 5 secondes
        setTimeout(() => {
            if (notification.parentElement) {
                notification.remove();
            }
        }, 5000);
        
        // Fermer manuellement
        notification.querySelector('.close-notification').addEventListener('click', () => {
            notification.remove();
        });
    }
}

// Initialiser le gestionnaire d'authentification
const authManager = new AuthManager();
window.authManager = authManager;
```

