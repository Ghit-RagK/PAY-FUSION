    <script>
        // Charger les pays pour les select
        async function loadCountries(selectId) {
            const select = document.getElementById(selectId);
            if (!select) return;
            
            try {
                const response = await fetch('https://restcountries.com/v3.1/all?fields=name,cca2');
                const countries = await response.json();
                
                countries.sort((a, b) => a.name.common.localeCompare(b.name.common));
                
                countries.forEach(country => {
                    const option = document.createElement('option');
                    option.value = country.cca2;
                    option.textContent = country.name.common;
                    select.appendChild(option);
                });
            } catch (error) {
                console.error('Erreur chargement pays:', error);
            }
        }
        
        // Initialiser
        document.addEventListener('DOMContentLoaded', function() {
            // Charger les pays
            loadCountries('nationality');
            loadCountries('countryResidence');
            
            // Gestion des étapes
            const kycManager = new KYCManager();
            kycManager.init();
        });
    </script>
</body>
</html>
```

17. Script KYC Vérification - kyc-verification.js

```javascript
// Gestion de la Vérification KYC PayFusion
class KYCManager {
    constructor() {
        this.currentStep = 1;
        this.kycData = {
            personalInfo: {},
            documents: {},
            selfie: null
        };
        
        this.init();
    }
    
    init() {
        this.setupStepNavigation();
        this.setupFileUploads();
        this.setupWebcam();
        this.setupFormSubmission();
        this.loadExistingData();
    }
    
    setupStepNavigation() {
        // Boutons Suivant
        document.querySelectorAll('.btn-next-step').forEach(btn => {
            btn.addEventListener('click', () => {
                const nextStep = parseInt(btn.dataset.next);
                this.goToStep(nextStep);
            });
        });
        
        // Boutons Précédent
        document.querySelectorAll('.btn-prev-step').forEach(btn => {
            btn.addEventListener('click', () => {
                const prevStep = parseInt(btn.dataset.prev);
                this.goToStep(prevStep);
            });
        });
        
        // Clic sur les étapes
        document.querySelectorAll('.kyc-step').forEach(step => {
            step.addEventListener('click', () => {
                const stepNum = parseInt(step.dataset.step);
                if (stepNum < this.currentStep) {
                    this.goToStep(stepNum);
                }
            });
        });
    }
    
    goToStep(stepNumber) {
        // Valider l'étape actuelle avant de passer
        if (!this.validateCurrentStep()) {
            return;
        }
        
        // Mettre à jour les indicateurs d'étape
        document.querySelectorAll('.kyc-step').forEach(step => {
            const stepNum = parseInt(step.dataset.step);
            
            step.classList.remove('active', 'completed');
            
            if (stepNum === stepNumber) {
                step.classList.add('active');
            } else if (stepNum < stepNumber) {
                step.classList.add('completed');
            }
        });
        
        // Masquer tous les contenus d'étape
        document.querySelectorAll('.kyc-step-content').forEach(content => {
            content.classList.remove('active');
        });
        
        // Afficher le contenu de l'étape sélectionnée
        const stepContent = document.querySelector(`.kyc-step-content[data-step="${stepNumber}"]`);
        if (stepContent) {
            stepContent.classList.add('active');
            
            // Animation de transition
            stepContent.style.opacity = '0';
            stepContent.style.transform = 'translateY(20px)';
            
            setTimeout(() => {
                stepContent.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
                stepContent.style.opacity = '1';
                stepContent.style.transform = 'translateY(0)';
            }, 10);
        }
        
        this.currentStep = stepNumber;
        
        // Mettre à jour l'aperçu si c'est l'étape de confirmation
        if (stepNumber === 4) {
            this.updateReview();
        }
        
        // Scroll vers le haut
        window.scrollTo({ top: 0, behavior: 'smooth' });
    }
    
    validateCurrentStep() {
        switch(this.currentStep) {
            case 1:
                return this.validatePersonalInfo();
            case 2:
                return this.validateDocuments();
            case 3:
                return this.validateSelfie();
            default:
                return true;
        }
    }
    
    validatePersonalInfo() {
        const requiredFields = [
            'fullName', 'dob', 'nationality', 
            'address', 'city', 'postalCode', 'countryResidence'
        ];
        
        let isValid = true;
        
        requiredFields.forEach(fieldId => {
            const field = document.getElementById(fieldId);
            if (field && !field.value.trim()) {
                this.showFieldError(field, 'Ce champ est requis');
                isValid = false;
            } else {
                this.clearFieldError(field);
            }
        });
        
        if (isValid) {
            // Sauvegarder les données
            this.kycData.personalInfo = this.collectPersonalInfo();
        }
        
        return isValid;
    }
    
    collectPersonalInfo() {
        return {
            fullName: document.getElementById('fullName').value,
            dateOfBirth: document.getElementById('dob').value,
            nationality: document.getElementById('nationality').value,
            address: document.getElementById('address').value,
            city: document.getElementById('city').value,
            postalCode: document.getElementById('postalCode').value,
            countryResidence: document.getElementById('countryResidence').value,
            timestamp: new Date().toISOString()
        };
    }
    
    validateDocuments() {
        const idType = document.querySelector('input[name="idType"]:checked');
        const idFront = document.getElementById('idFront').files[0];
        const idBack = document.getElementById('idBack').files[0];
        
        let isValid = true;
        
        if (!idType) {
            this.showError('Veuillez sélectionner un type de pièce d\'identité');
            isValid = false;
        }
        
        if (!idFront) {
            this.showFieldError(document.getElementById('idFrontArea'), 'Le recto est requis');
            isValid = false;
        } else {
            const validation = this.validateDocumentFile(idFront);
            if (!validation.valid) {
                this.showFieldError(document.getElementById('idFrontArea'), validation.message);
                isValid = false;
            } else {
                this.clearFieldError(document.getElementById('idFrontArea'));
            }
        }
        
        if (!idBack) {
            this.showFieldError(document.getElementById('idBackArea'), 'Le verso est requis');
            isValid = false;
        } else {
            const validation = this.validateDocumentFile(idBack);
            if (!validation.valid) {
                this.showFieldError(document.getElementById('idBackArea'), validation.message);
                isValid = false;
            } else {
                this.clearFieldError(document.getElementById('idBackArea'));
            }
        }
        
        if (isValid) {
            // Sauvegarder les données
            this.kycData.documents = {
                idType: idType.value,
                idFront: idFront,
                idBack: idBack
            };
        }
        
        return isValid;
    }
    
    validateDocumentFile(file) {
        // Vérifier le type de fichier
        const validTypes = ['image/jpeg', 'image/jpg', 'image/png', 'application/pdf'];
        if (!validTypes.includes(file.type)) {
            return {
                valid: false,
                message: 'Format de fichier invalide. Formats acceptés: JPG, PNG, PDF'
            };
        }
        
        // Vérifier la taille
        const maxSize = 5 * 1024 * 1024; // 5MB
        if (file.size > maxSize) {
            return {
                valid: false,
                message: 'Fichier trop volumineux. Maximum: 5MB'
            };
        }
        
        return { valid: true, message: 'Fichier valide' };
    }
    
    validateSelfie() {
        const selfieData = document.getElementById('selfieData').value;
        
        if (!selfieData) {
            this.showError('Veuillez prendre un selfie avec votre pièce d\'identité');
            return false;
        }
        
        this.kycData.selfie = selfieData;
        return true;
    }
    
    setupFileUploads() {
        // Recto de la pièce d'identité
        const idFrontArea = document.getElementById('idFrontArea');
        const idFrontInput = document.getElementById('idFront');
        const idFrontPreview = document.getElementById('idFrontPreview');
        
        if (idFrontArea && idFrontInput) {
            idFrontArea.addEventListener('click', () => idFrontInput.click());
            idFrontInput.addEventListener('change', (e) => {
                this.handleFileUpload(e.target.files[0], idFrontPreview, idFrontArea);
            });
        }
        
        // Verso de la pièce d'identité
        const idBackArea = document.getElementById('idBackArea');
        const idBackInput = document.getElementById('idBack');
        const idBackPreview = document.getElementById('idBackPreview');
        
        if (idBackArea && idBackInput) {
            idBackArea.addEventListener('click', () => idBackInput.click());
            idBackInput.addEventListener('change', (e) => {
                this.handleFileUpload(e.target.files[0], idBackPreview, idBackArea);
            });
        }
        
        // Drag & Drop
        this.setupDragAndDrop(idFrontArea, idFrontInput, idFrontPreview);
        this.setupDragAndDrop(idBackArea, idBackInput, idBackPreview);
    }
    
    handleFileUpload(file, previewElement, areaElement) {
        if (!file) return;
        
        // Valider le fichier
        const validation = this.validateDocumentFile(file);
        if (!validation.valid) {
            this.showFieldError(areaElement, validation.message);
            return;
        }
        
        this.clearFieldError(areaElement);
        
        // Afficher la prévisualisation
        if (file.type.startsWith('image/')) {
            const reader = new FileReader();
            reader.onload = (e) => {
                previewElement.innerHTML = `
                    <img src="${e.target.result}" alt="Prévisualisation">
                    <button type="button" class="remove-preview">
                        <i class="fas fa-times"></i>
                    </button>
                `;
                
                // Bouton pour supprimer
                previewElement.querySelector('.remove-preview').addEventListener('click', (e) => {
                    e.stopPropagation();
                    previewElement.innerHTML = '';
                    if (previewElement === idFrontPreview) {
                        document.getElementById('idFront').value = '';
                    } else {
                        document.getElementById('idBack').value = '';
                    }
                });
            };
            reader.readAsDataURL(file);
        } else if (file.type === 'application/pdf') {
            previewElement.innerHTML = `
                <div class="pdf-preview">
                    <i class="fas fa-file-pdf"></i>
                    <span>${file.name}</span>
                    <button type="button" class="remove-preview">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            `;
            
            previewElement.querySelector('.remove-preview').addEventListener('click', (e) => {
                e.stopPropagation();
                previewElement.innerHTML = '';
                if (previewElement === idFrontPreview) {
                    document.getElementById('idFront').value = '';
                } else {
                    document.getElementById('idBack').value = '';
                }
            });
        }
    }
    
    setupDragAndDrop(areaElement, inputElement, previewElement) {
        if (!areaElement) return;
        
        // Empêcher le comportement par défaut
        ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
            areaElement.addEventListener(eventName, (e) => {
                e.preventDefault();
                e.stopPropagation();
            });
        });
        
        // Ajouter des classes pendant le drag
        ['dragenter', 'dragover'].forEach(eventName => {
            areaElement.addEventListener(eventName, () => {
                areaElement.classList.add('dragover');
            });
        });
        
        ['dragleave', 'drop'].forEach(eventName => {
            areaElement.addEventListener(eventName, () => {
                areaElement.classList.remove('dragover');
            });
        });
        
        // Gérer le drop
        areaElement.addEventListener('drop', (e) => {
            const file = e.dataTransfer.files[0];
            if (file) {
                inputElement.files = e.dataTransfer.files;
                this.handleFileUpload(file, previewElement, areaElement);
            }
        });
    }
    
    setupWebcam() {
        const startCameraBtn = document.getElementById('startCamera');
        const capturePhotoBtn = document.getElementById('capturePhoto');
        const retakePhotoBtn = document.getElementById('retakePhoto');
        const webcam = document.getElementById('webcam');
        const canvas = document.getElementById('webcamCanvas');
        const preview = document.getElementById('selfiePreview');
        const selfieDataInput = document.getElementById('selfieData');
        
        let stream = null;
        let capturedImage = null;
        
        if (startCameraBtn) {
            startCameraBtn.addEventListener('click', async () => {
                try {
                    // Demander l'accès à la caméra
                    stream = await navigator.mediaDevices.getUserMedia({ 
                        video: { 
                            facingMode: 'user',
                            width: { ideal: 1280 },
                            height: { ideal: 720 }
                        },
                        audio: false 
                    });
                    
                    // Afficher le flux vidéo
                    webcam.srcObject = stream;
                    webcam.style.display = 'block';
                    
                    // Activer le bouton de capture
                    capturePhotoBtn.disabled = false;
                    startCameraBtn.style.display = 'none';
                    
                } catch (error) {
                    console.error('Erreur accès caméra:', error);
                    this.showError('Impossible d\'accéder à la caméra. Veuillez vérifier vos permissions.');
                }
            });
        }
        
        if (capturePhotoBtn) {
            capturePhotoBtn.addEventListener('click', () => {
                if (!stream) return;
                
                // Ajuster la taille du canvas à la vidéo
                canvas.width = webcam.videoWidth;
                canvas.height = webcam.videoHeight;
                
                // Dessiner l'image du flux vidéo sur le canvas
                const ctx = canvas.getContext('2d');
                ctx.drawImage(webcam, 0, 0, canvas.width, canvas.height);
                
                // Obtenir l'image en base64
                capturedImage = canvas.toDataURL('image/jpeg', 0.8);
                
                // Afficher la prévisualisation
                preview.innerHTML = `
                    <img src="${capturedImage}" alt="Selfie">
                    <button type="button" class="remove-selfie">
                        <i class="fas fa-times"></i>
                    </button>
                `;
                preview.style.display = 'block';
                
                // Sauvegarder dans le champ caché
                selfieDataInput.value = capturedImage;
                
                // Changer les boutons
                capturePhotoBtn.style.display = 'none';
                retakePhotoBtn.style.display = 'inline-flex';
                
                // Arrêter le flux vidéo
                stream.getTracks().forEach(track => track.stop());
                webcam.style.display = 'none';
            });
        }
        
        if (retakePhotoBtn) {
            retakePhotoBtn.addEventListener('click', () => {
                // Réinitialiser
                preview.innerHTML = '';
                preview.style.display = 'none';
                selfieDataInput.value = '';
                
                // Réactiver la caméra
                startCameraBtn.style.display = 'inline-flex';
                capturePhotoBtn.style.display = 'inline-flex';
                retakePhotoBtn.style.display = 'none';
                capturePhotoBtn.disabled = true;
                
                // Redémarrer la caméra
                this.setupWebcam();
            });
        }
        
        // Nettoyer le flux vidéo quand on quitte la page
        window.addEventListener('beforeunload', () => {
            if (stream) {
                stream.getTracks().forEach(track => track.stop());
            }
        });
    }
    
    setupFormSubmission() {
        const form = document.getElementById('kycForm');
        if (!form) return;
        
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            // Valider la dernière étape
            if (!this.validateCurrentStep()) {
                return;
            }
            
            // Vérifier les consentements
            const kycConsent = document.getElementById('kycConsent');
            const dataConsent = document.getElementById('dataConsent');
            
            if (!kycConsent.checked || !dataConsent.checked) {
                this.showError('Veuillez accepter les conditions');
                return;
            }
            
            // Soumettre le formulaire
            await this.submitKYC();
        });
    }
    
    async submitKYC() {
        const user = auth.currentUser;
        if (!user) {
            this.showError('Veuillez vous connecter');
            window.location.href = 'login.html';
            return;
        }
        
        try {
            // Afficher le loader
            this.showLoader('Soumission en cours...');
            
            // Préparer les données
            const kycSubmission = {
                userId: user.uid,
                personalInfo: this.kycData.personalInfo,
                documents: {
                    idType: this.kycData.documents.idType
                },
                status: 'pending',
                submittedAt: firebase.firestore.FieldValue.serverTimestamp(),
                reviewedBy: null,
                reviewedAt: null,
                verificationResult: null,
                comments: null
            };
            
            // Upload des fichiers
            const uploadPromises = [];
            
            // Upload recto
            if (this.kycData.documents.idFront) {
                const frontUrl = await this.uploadKYCFile(
                    user.uid, 
                    this.kycData.documents.idFront, 
                    'id_front'
                );
                kycSubmission.documents.idFrontUrl = frontUrl;
            }
            
            // Upload verso
            if (this.kycData.documents.idBack) {
                const backUrl = await this.uploadKYCFile(
                    user.uid, 
                    this.kycData.documents.idBack, 
                    'id_back'
                );
                kycSubmission.documents.idBackUrl = backUrl;
            }
            
            // Upload selfie
            if (this.kycData.selfie) {
                const selfieUrl = await this.uploadSelfieImage(user.uid, this.kycData.selfie);
                kycSubmission.selfieUrl = selfieUrl;
            }
            
            // Enregistrer dans Firestore
            const kycRef = await db.collection('kycSubmissions').add(kycSubmission);
            
            // Mettre à jour le statut utilisateur
            await db.collection('users').doc(user.uid).update({
                kycStatus: 'pending',
                kycSubmissionId: kycRef.id,
                kycSubmittedAt: firebase.firestore.FieldValue.serverTimestamp()
            });
            
            // Cacher le loader
            this.hideLoader();
            
            // Afficher le succès
            this.showSuccess('Vérification KYC soumise avec succès !');
            
            // Rediriger après 3 secondes
            setTimeout(() => {
                window.location.href = 'dashboard.html';
            }, 3000);
            
        } catch (error) {
            console.error('Erreur soumission KYC:', error);
            this.hideLoader();
            this.showError('Erreur lors de la soumission. Veuillez réessayer.');
        }
    }
    
    async uploadKYCFile(userId, file, fileType) {
        try {
            // Créer une référence dans Firebase Storage
            const storageRef = storage.ref(`kyc/${userId}/${fileType}_${Date.now()}_${file.name}`);
            
            // Upload le fichier
            const snapshot = await storageRef.put(file);
            
            // Obtenir l'URL de téléchargement
            const downloadURL = await snapshot.ref.getDownloadURL();
            
            return downloadURL;
            
        } catch (error) {
            console.error('Erreur upload fichier:', error);
            throw error;
        }
    }
    
    async uploadSelfieImage(userId, base64Image) {
        try {
            // Convertir base64 en blob
            const response = await fetch(base64Image);
            const blob = await response.blob();
            
            // Créer une référence
            const storageRef = storage.ref(`kyc/${userId}/selfie_${Date.now()}.jpg`);
            
            // Upload
            const snapshot = await storageRef.put(blob);
            
            // Obtenir l'URL
            const downloadURL = await snapshot.ref.getDownloadURL();
            
            return downloadURL;
            
        } catch (error) {
            console.error('Erreur upload selfie:', error);
            throw error;
        }
    }
    
    updateReview() {
        // Informations personnelles
        const personalInfoReview = document.getElementById('personalInfoReview');
        if (personalInfoReview && this.kycData.personalInfo) {
            const info = this.kycData.personalInfo;
            personalInfoReview.innerHTML = `
                <p><strong>Nom complet:</strong> ${info.fullName || 'Non fourni'}</p>
                <p><strong>Date de naissance:</strong> ${info.dateOfBirth || 'Non fourni'}</p>
                <p><strong>Nationalité:</strong> ${info.nationality || 'Non fourni'}</p>
                <p><strong>Adresse:</strong> ${info.address || 'Non fourni'}</p>
                <p><strong>Ville:</strong> ${info.city || 'Non fourni'}, ${info.postalCode || ''}</p>
                <p><strong>Pays:</strong> ${info.countryResidence || 'Non fourni'}</p>
            `;
        }
        
        // Documents
        const documentsReview = document.getElementById('documentsReview');
        if (documentsReview && this.kycData.documents) {
            const docs = this.kycData.documents;
            const idTypeNames = {
                'passport': 'Passeport',
                'driving_license': 'Permis de conduire',
                'national_id': 'Carte nationale'
            };
            
            documentsReview.innerHTML = `
                <p><strong>Type de pièce:</strong> ${idTypeNames[docs.idType] || 'Non sélectionné'}</p>
                <p><strong>Recto:</strong> ${docs.idFront ? '✓ Téléchargé' : '✗ Manquant'}</p>
                <p><strong>Verso:</strong> ${docs.idBack ? '✓ Téléchargé' : '✗ Manquant'}</p>
            `;
        }
        
        // Selfie
        const selfieReview = document.getElementById('selfieReview');
        if (selfieReview && this.kycData.selfie) {
            selfieReview.innerHTML = `
                <div class="selfie-review">
                    <img src="${this.kycData.selfie}" alt="Selfie preview" style="max-width: 200px; border-radius: 8px;">
                    <p>✓ Selfie téléchargé</p>
                </div>
            `;
        }
    }
    
    loadExistingData() {
        // Charger les données existantes depuis localStorage ou Firestore
        const savedData = localStorage.getItem('payfusion_kyc_draft');
        if (savedData) {
            try {
                this.kycData = JSON.parse(savedData);
                this.populateFormFromData();
            } catch (error) {
                console.error('Erreur chargement données sauvegardées:', error);
            }
        }
        
        // Sauvegarder automatiquement quand l'utilisateur quitte la page
        window.addEventListener('beforeunload', () => {
            this.saveDraft();
        });
        
        // Sauvegarder toutes les 30 secondes
        setInterval(() => {
            this.saveDraft();
        }, 30000);
    }
    
    saveDraft() {
        try {
            localStorage.setItem('payfusion_kyc_draft', JSON.stringify(this.kycData));
        } catch (error) {
            console.error('Erreur sauvegarde brouillon:', error);
        }
    }
    
    populateFormFromData() {
        // Informations personnelles
        if (this.kycData.personalInfo) {
            const info = this.kycData.personalInfo;
            document.getElementById('fullName').value = info.fullName || '';
            document.getElementById('dob').value = info.dateOfBirth || '';
            document.getElementById('nationality').value = info.nationality || '';
            document.getElementById('address').value = info.address || '';
            document.getElementById('city').value = info.city || '';
            document.getElementById('postalCode').value = info.postalCode || '';
            document.getElementById('countryResidence').value = info.countryResidence || '';
        }
        
        // Documents (ne peut pas pré-remplir les fichiers pour des raisons de sécurité)
    }
    
    // Méthodes utilitaires
    showFieldError(field, message) {
        if (!field) return;
        
        field.classList.add('error');
        
        let errorElement = field.parentElement.querySelector('.error-message');
        if (!errorElement) {
            errorElement = document.createElement('div');
            errorElement.className = 'error-message';
            field.parentElement.appendChild(errorElement);
        }
        
        errorElement.textContent = message;
        errorElement.style.display = 'block';
    }
    
    clearFieldError(field) {
        if (!field) return;
        
        field.classList.remove('error');
        
        const errorElement = field.parentElement.querySelector('.error-message');
        if (errorElement) {
            errorElement.style.display = 'none';
        }
    }
    
    showError(message) {
        this.showNotification(message, 'error');
    }
    
    showSuccess(message) {
        this.showNotification(message, 'success');
    }
    
    showNotification(message, type = 'info') {
        const notification = document.createElement('div');
        notification.className = `kyc-notification ${type}`;
        notification.innerHTML = `
            <div class="notification-content">
                <i class="fas fa-${type === 'success' ? 'check' : 'exclamation'}"></i>
                <span>${message}</span>
                <button class="close-notification"><i class="fas fa-times"></i></button>
            </div>
        `;
        
        document.body.appendChild(notification);
        
        // Auto-remove après 5 secondes
        setTimeout(() => {
            if (notification.parentElement) {
                notification.remove();
            }
        }, 5000);
        
        // Fermer manuellement
        notification.querySelector('.close-notification').addEventListener('click', () => {
            notification.remove();
        });
    }
    
    showLoader(message = 'Chargement...') {
        // Cacher l'ancien loader s'il existe
        this.hideLoader();
        
        const loader = document.createElement('div');
        loader.className = 'kyc-loader';
        loader.innerHTML = `
            <div class="loader-content">
                <div class="loader-spinner"></div>
                <p>${message}</p>
            </div>
        `;
        
        loader.style.cssText = `
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.8);
            backdrop-filter: blur(5px);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 9999;
        `;
        
        document.body.appendChild(loader);
        document.body.classList.add('loading');
    }
    
    hideLoader() {
        const loader = document.querySelector('.kyc-loader');
        if (loader) {
            loader.remove();
        }
        document.body.classList.remove('loading');
    }
}

// Initialiser le gestionnaire KYC
const kycManager = new KYCManager();
window.kycManager = kycManager;
```

18. Service Worker - sw.js (Progressive Web App)

```javascript
// Service Worker pour PayFusion PWA
const CACHE_NAME = 'payfusion-v1.0.0';
const OFFLINE_URL = '/offline.html';

// Assets à mettre en cache immédiatement
const PRECACHE_ASSETS = [
    '/',
    '/index.html',
    '/offline.html',
    '/assets/css/main.css',
    '/assets/css/responsive.css',
    '/assets/css/auth.css',
    '/assets/js/main.js',
    '/assets/js/auth.js',
    '/assets/images/logo/favicon.ico',
    '/assets/images/logo/icon-192.png',
    '/assets/images/logo/icon-512.png'
];

// Installation du Service Worker
self.addEventListener('install', (event) => {
    event.waitUntil(
        caches.open(CACHE_NAME)
            .then((cache) => {
                console.log('Cache ouvert');
                return cache.addAll(PRECACHE_ASSETS);
            })
            .then(() => self.skipWaiting())
    );
});

// Activation du Service Worker
self.addEventListener('activate', (event) => {
    event.waitUntil(
        caches.keys().then((cacheNames) => {
            return Promise.all(
                cacheNames.map((cacheName) => {
                    if (cacheName !== CACHE_NAME) {
                        console.log('Suppression ancien cache:', cacheName);
                        return caches.delete(cacheName);
                    }
                })
            );
        }).then(() => self.clients.claim())
    );
});

// Stratégie: Cache First, Network Fallback
self.addEventListener('fetch', (event) => {
    // Ignorer les requêtes non-GET et les requêtes Firebase
    if (event.request.method !== 'GET' || 
        event.request.url.includes('firebase') ||
        event.request.url.includes('googleapis') ||
        event.request.url.includes('gstatic')) {
        return;
    }

    event.respondWith(
        caches.match(event.request)
            .then((cachedResponse) => {
                if (cachedResponse) {
                    return cachedResponse;
                }

                return fetch(event.request)
                    .then((response) => {
                        // Vérifier si la réponse est valide
                        if (!response || response.status !== 200 || response.type !== 'basic') {
                            return response;
                        }

                        // Cloner la réponse pour le cache
                        const responseToCache = response.clone();

                        caches.open(CACHE_NAME)
                            .then((cache) => {
                                cache.put(event.request, responseToCache);
                            });

                        return response;
                    })
                    .catch(() => {
                        // Si offline et page HTML, retourner la page offline
                        if (event.request.headers.get('accept').includes('text/html')) {
                            return caches.match(OFFLINE_URL);
                        }
                    });
            })
    );
});

// Gestion des notifications push
self.addEventListener('push', (event) => {
    if (!event.data) return;

    const data = event.data.json();
    const options = {
        body: data.body || 'Nouvelle notification PayFusion',
        icon: '/assets/images/logo/icon-192.png',
        badge: '/assets/images/logo/badge.png',
        vibrate: [100, 50, 100],
        data: {
            url: data.url || '/',
            timestamp: Date.now()
        },
        actions: [
            {
                action: 'open',
                title: 'Ouvrir'
            },
            {
                action: 'close',
                title: 'Fermer'
            }
        ]
    };

    event.waitUntil(
        self.registration.showNotification(data.title || 'PayFusion', options)
    );
});

// Clic sur notification
self.addEventListener('notificationclick', (event) => {
    event.notification.close();

    if (event.action === 'close') {
        return;
    }

    event.waitUntil(
        clients.matchAll({ type: 'window', includeUncontrolled: true })
            .then((clientList) => {
                // Ouvrir ou focus une fenêtre existante
                for (const client of clientList) {
                    if (client.url === event.notification.data.url && 'focus' in client) {
                        return client.focus();
                    }
                }

                // Ouvrir une nouvelle fenêtre
                if (clients.openWindow) {
                    return clients.openWindow(event.notification.data.url);
                }
            })
    );
});

// Synchronisation en arrière-plan
self.addEventListener('sync', (event) => {
    if (event.tag === 'sync-transactions') {
        event.waitUntil(syncTransactions());
    }
});

async function syncTransactions() {
    try {
        // Récupérer les transactions en attente de synchronisation
        const pendingTransactions = await getPendingTransactions();
        
        for (const transaction of pendingTransactions) {
            await syncTransaction(transaction);
            await markTransactionAsSynced(transaction.id);
        }
        
        // Notifier l'utilisateur
        self.registration.showNotification('PayFusion', {
            body: 'Transactions synchronisées avec succès',
            icon: '/assets/images/logo/icon-192.png'
        });
        
    } catch (error) {
        console.error('Erreur synchronisation:', error);
    }
}

// Fonctions utilitaires pour la synchronisation
async function getPendingTransactions() {
    // Implémenter la logique pour récupérer les transactions en attente
    return [];
}

async function syncTransaction(transaction) {
    // Implémenter la logique de synchronisation
}

async function markTransactionAsSynced(transactionId) {
    // Implémenter la logique pour marquer comme synchronisé
}

// Gestion des messages du client
self.addEventListener('message', (event) => {
    if (event.data && event.data.type === 'SKIP_WAITING') {
        self.skipWaiting();
    }
});
```

