    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="firebase/firebase-config.js"></script>
    <script src="assets/js/auth.js"></script>
    <script src="assets/js/main.js"></script>
    <script src="assets/js/dashboard.js"></script>

    <script>
        // Initialiser le dashboard
        document.addEventListener('DOMContentLoaded', async function() {
            // Vérifier l'authentification
            const user = auth.currentUser;
            if (!user) {
                window.location.href = 'login.html';
                return;
            }

            // Initialiser le dashboard
            const dashboard = new DashboardManager();
            await dashboard.init();

            // Gestion du menu utilisateur
            document.getElementById('userAvatarBtn').addEventListener('click', function() {
                document.getElementById('userDropdown').classList.toggle('show');
            });

            // Fermer le dropdown en cliquant ailleurs
            window.addEventListener('click', function(e) {
                if (!e.target.matches('#userAvatarBtn, #userAvatarBtn *')) {
                    const dropdown = document.getElementById('userDropdown');
                    if (dropdown.classList.contains('show')) {
                        dropdown.classList.remove('show');
                    }
                }
            });

            // Logout
            document.getElementById('logoutBtn').addEventListener('click', async function() {
                await authManager.logoutUser();
            });
        });

        // Classe Dashboard Manager
        class DashboardManager {
            constructor() {
                this.userId = null;
                this.userData = null;
            }

            async init() {
                const user = auth.currentUser;
                if (!user) return;

                this.userId = user.uid;
                await this.loadUserData();
                await this.loadDashboardData();
                this.initCharts();
                this.setupEventListeners();
            }

            async loadUserData() {
                try {
                    const userDoc = await db.collection('users').doc(this.userId).get();
                    if (userDoc.exists) {
                        this.userData = userDoc.data();
                        this.updateUserUI();
                    }
                } catch (error) {
                    console.error('Erreur chargement données utilisateur:', error);
                }
            }

            updateUserUI() {
                // Nom utilisateur
                const userName = document.getElementById('dashboardUserName');
                const userDisplayName = document.getElementById('userName');
                if (userName && this.userData) {
                    const name = this.userData.firstName || 'Utilisateur';
                    userName.textContent = name;
                    userDisplayName.textContent = name;
                }

                // Email
                const userEmail = document.getElementById('userEmail');
                if (userEmail && this.userData) {
                    userEmail.textContent = this.userData.email || 'Non défini';
                }

                // Balance
                const userBalance = document.getElementById('userBalance');
                if (userBalance && this.userData?.balance) {
                    const total = this.calculateTotalBalance(this.userData.balance);
                    userBalance.textContent = `$${total.toFixed(2)}`;
                }

                // Jours actifs
                const daysActive = document.getElementById('daysActive');
                if (daysActive && this.userData?.createdAt) {
                    const created = this.userData.createdAt.toDate();
                    const now = new Date();
                    const diffTime = Math.abs(now - created);
                    const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
                    daysActive.textContent = diffDays;
                }

                // Statut KYC
                this.updateKYCStatus();
            }

            calculateTotalBalance(balances) {
                let total = 0;
                if (!balances) return total;

                // Convertir toutes les cryptos en USD
                // Note: Dans une vraie implémentation, utiliser les prix actuels
                for (const [currency, amount] of Object.entries(balances)) {
                    if (currency === 'usd') {
                        total += amount;
                    } else if (currency === 'btc') {
                        total += amount * 45000; // Prix BTC estimé
                    } else if (currency === 'eth') {
                        total += amount * 3000; // Prix ETH estimé
                    }
                }

                return total;
            }

            async loadDashboardData() {
                await this.loadBalanceStats();
                await this.loadRecentActivity();
                await this.loadMarketData();
            }

            async loadBalanceStats() {
                try {
                    // Simuler des données pour la démo
                    document.getElementById('totalBalance').textContent = '$12,450.75';
                    document.getElementById('totalDeposits').textContent = '$8,500.00';
                    document.getElementById('totalWithdrawals').textContent = '$2,300.00';
                    document.getElementById('totalProfit').textContent = '$1,650.75';
                } catch (error) {
                    console.error('Erreur chargement stats:', error);
                }
            }

            async loadRecentActivity() {
                try {
                    const activityList = document.getElementById('recentActivity');
                    if (!activityList) return;

                    // Charger les transactions récentes
                    const transactionsRef = db.collection('transactions')
                        .where('userId', '==', this.userId)
                        .orderBy('timestamp', 'desc')
                        .limit(5);

                    const snapshot = await transactionsRef.get();

                    if (snapshot.empty) {
                        activityList.innerHTML = `
                            <div class="no-activity">
                                <i class="fas fa-history"></i>
                                <p>Aucune activité récente</p>
                            </div>
                        `;
                        return;
                    }

                    activityList.innerHTML = '';
                    snapshot.forEach(doc => {
                        const data = doc.data();
                        const activity = this.createActivityItem(data);
                        activityList.appendChild(activity);
                    });

                } catch (error) {
                    console.error('Erreur chargement activité:', error);
                }
            }

            createActivityItem(transaction) {
                const div = document.createElement('div');
                div.className = 'activity-item';

                let icon = 'fa-exchange-alt';
                let color = 'var(--info-color)';
                let type = 'Transaction';

                switch(transaction.type) {
                    case 'deposit':
                        icon = 'fa-arrow-down';
                        color = 'var(--success-color)';
                        type = 'Dépôt';
                        break;
                    case 'withdrawal':
                        icon = 'fa-arrow-up';
                        color = 'var(--error-color)';
                        type = 'Retrait';
                        break;
                    case 'buy':
                        icon = 'fa-shopping-cart';
                        color = 'var(--warning-color)';
                        type = 'Achat';
                        break;
                    case 'sell':
                        icon = 'fa-money-bill-wave';
                        color = 'var(--success-color)';
                        type = 'Vente';
                        break;
                }

                const date = transaction.timestamp?.toDate();
                const formattedDate = date ? date.toLocaleDateString('fr-FR', {
                    day: 'numeric',
                    month: 'short',
                    hour: '2-digit',
                    minute: '2-digit'
                }) : 'Date inconnue';

                div.innerHTML = `
                    <div class="activity-icon" style="background-color: ${color}20; color: ${color}">
                        <i class="fas ${icon}"></i>
                    </div>
                    <div class="activity-details">
                        <h4>${type} ${transaction.symbol || ''}</h4>
                        <p>${formattedDate}</p>
                    </div>
                    <div class="activity-amount" style="color: ${transaction.type === 'withdrawal' || transaction.type === 'buy' ? 'var(--error-color)' : 'var(--success-color)'}">
                        ${transaction.type === 'withdrawal' || transaction.type === 'buy' ? '-' : '+'}$${transaction.amount || '0.00'}
                    </div>
                `;

                return div;
            }

            async loadMarketData() {
                try {
                    const tickersContainer = document.getElementById('marketTickers');
                    if (!tickersContainer) return;

                    // Données de marché simulées
                    const marketData = [
                        { symbol: 'BTC', price: 45280, change: 2.5 },
                        { symbol: 'ETH', price: 3025, change: 1.8 },
                        { symbol: 'BNB', price: 415, change: 3.2 },
                        { symbol: 'SOL', price: 105, change: 5.1 },
                        { symbol: 'XRP', price: 0.62, change: -0.5 }
                    ];

                    tickersContainer.innerHTML = marketData.map(crypto => `
                        <div class="market-ticker">
                            <div class="ticker-symbol">
                                <strong>${crypto.symbol}</strong>
                                <span>${crypto.symbol === 'BTC' ? 'Bitcoin' : 
                                        crypto.symbol === 'ETH' ? 'Ethereum' :
                                        crypto.symbol === 'BNB' ? 'Binance Coin' :
                                        crypto.symbol === 'SOL' ? 'Solana' : 'Ripple'}</span>
                            </div>
                            <div class="ticker-price">
                                <strong>$${crypto.price.toLocaleString()}</strong>
                                <span class="ticker-change ${crypto.change >= 0 ? 'positive' : 'negative'}">
                                    ${crypto.change >= 0 ? '+' : ''}${crypto.change}%
                                </span>
                            </div>
                        </div>
                    `).join('');

                } catch (error) {
                    console.error('Erreur chargement marché:', error);
                }
            }

            updateKYCStatus() {
                const kycCard = document.getElementById('kycStatusCard');
                if (!kycCard || !this.userData) return;

                const status = this.userData.kycStatus || 'not_started';
                let statusHTML = '';

                switch(status) {
                    case 'verified':
                        statusHTML = `
                            <div class="kyc-status-verified">
                                <i class="fas fa-check-circle"></i>
                                <div>
                                    <h4>Vérification complétée</h4>
                                    <p>Votre compte est entièrement vérifié</p>
                                </div>
                            </div>
                        `;
                        break;
                    case 'pending':
                        statusHTML = `
                            <div class="kyc-status-pending">
                                <i class="fas fa-clock"></i>
                                <div>
                                    <h4>Vérification en cours</h4>
                                    <p>Nous traitons vos documents</p>
                                </div>
                            </div>
                        `;
                        break;
                    case 'rejected':
                        statusHTML = `
                            <div class="kyc-status-rejected">
                                <i class="fas fa-times-circle"></i>
                                <div>
                                    <h4>Vérification rejetée</h4>
                                    <p>Veuillez soumettre à nouveau vos documents</p>
                                    <button class="btn-kyc-retry" onclick="window.location.href='kyc-verification.html'">
                                        Réessayer
                                    </button>
                                </div>
                            </div>
                        `;
                        break;
                    default:
                        statusHTML = `
                            <div class="kyc-status-not-started">
                                <i class="fas fa-id-card"></i>
                                <div>
                                    <h4>Vérification requise</h4>
                                    <p>Complétez la vérification KYC pour débloquer toutes les fonctionnalités</p>
                                    <button class="btn-kyc-start" onclick="window.location.href='kyc-verification.html'">
                                        Commencer la vérification
                                    </button>
                                </div>
                            </div>
                        `;
                }

                kycCard.innerHTML = statusHTML;
            }

            initCharts() {
                // Graphique du portefeuille
                const portfolioCtx = document.getElementById('portfolioChart')?.getContext('2d');
                if (portfolioCtx) {
                    new Chart(portfolioCtx, {
                        type: 'doughnut',
                        data: {
                            labels: ['Bitcoin', 'Ethereum', 'USDT', 'BNB', 'Autres'],
                            datasets: [{
                                data: [40, 25, 20, 10, 5],
                                backgroundColor: [
                                    'rgba(255, 215, 0, 0.8)',
                                    'rgba(140, 86, 255, 0.8)',
                                    'rgba(0, 209, 178, 0.8)',
                                    'rgba(243, 186, 47, 0.8)',
                                    'rgba(128, 128, 128, 0.8)'
                                ],
                                borderWidth: 2,
                                borderColor: 'var(--primary-color)'
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: {
                                    position: 'bottom',
                                    labels: {
                                        color: 'var(--text-primary)',
                                        padding: 20,
                                        font: {
                                            size: 12
                                        }
                                    }
                                }
                            }
                        }
                    });
                }
            }

            setupEventListeners() {
                // Période du portefeuille
                const portfolioPeriod = document.getElementById('portfolioPeriod');
                if (portfolioPeriod) {
                    portfolioPeriod.addEventListener('change', (e) => {
                        console.log('Période changée:', e.target.value);
                        // Recharger les données pour la période sélectionnée
                    });
                }

                // Mettre à jour les données toutes les 30 secondes
                setInterval(() => {
                    this.loadMarketData();
                }, 30000);
            }
        }

        // Initialiser globalement
        window.DashboardManager = DashboardManager;
    </script>
</body>
</html>
```

(Note: Je continue avec les autres fichiers manquants... La réponse est trop longue pour tout montrer en une fois. Voici les autres fichiers manquants :)

