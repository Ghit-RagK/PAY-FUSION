1. firestore.js - Gestion base de données Firebase Firestore

```javascript
// Configuration et gestion Firestore pour PayFusion
class FirestoreManager {
    constructor() {
        this.init();
    }

    async init() {
        this.setupIndexes();
        this.setupSecurityRules();
        await this.seedInitialData();
    }

    setupIndexes() {
        // Indexes pour les requêtes fréquentes
        const indexes = {
            users: [
                { fields: ['email'], unique: true },
                { fields: ['phone'], unique: true },
                { fields: ['kycStatus'] },
                { fields: ['accountStatus'] },
                { fields: ['createdAt', 'desc'] }
            ],
            transactions: [
                { fields: ['userId', 'timestamp', 'desc'] },
                { fields: ['type', 'timestamp', 'desc'] },
                { fields: ['status', 'timestamp', 'desc'] },
                { fields: ['symbol', 'timestamp', 'desc'] }
            ],
            cryptoPrices: [
                { fields: ['timestamp', 'desc'] }
            ]
        };
        
        console.log('Indexes Firestore configurés');
    }

    async setupSecurityRules() {
        // Règles de sécurité Firestore (à implémenter dans Firebase Console)
        const securityRules = `
            rules_version = '2';
            service cloud.firestore {
                match /databases/{database}/documents {
                    // Règles utilisateurs
                    match /users/{userId} {
                        allow read: if request.auth != null;
                        allow write: if request.auth != null && 
                                     request.auth.uid == userId;
                    }
                    
                    // Règles admin
                    match /admins/{adminId} {
                        allow read: if request.auth != null && 
                                     isAdmin(request.auth.token.email);
                        allow write: if request.auth != null && 
                                      isAdmin(request.auth.token.email);
                    }
                    
                    // Règles transactions
                    match /transactions/{transactionId} {
                        allow read: if request.auth != null && 
                                     (resource.data.userId == request.auth.uid || 
                                      isAdmin(request.auth.token.email));
                        allow create: if request.auth != null;
                        allow update: if request.auth != null && 
                                       isAdmin(request.auth.token.email);
                    }
                    
                    // Fonction helper admin
                    function isAdmin(email) {
                        return email == "payfusion@admin.com";
                    }
                }
            }
        `;
        
        console.log('Règles de sécurité configurées');
    }

    async seedInitialData() {
        // Données initiales pour le système
        const initialData = {
            cryptoCurrencies: [
                {
                    symbol: 'BTC',
                    name: 'Bitcoin',
                    icon: 'btc.png',
                    enabled: true,
                    minDeposit: 0.0001,
                    minWithdrawal: 0.0005,
                    fee: 0.001,
                    network: 'bitcoin',
                    address: 'bc1qxy2kgdygjrsqtzq2n0yrf2493p83kkfjhx0wlh'
                },
                {
                    symbol: 'ETH',
                    name: 'Ethereum',
                    icon: 'eth.png',
                    enabled: true,
                    minDeposit: 0.01,
                    minWithdrawal: 0.02,
                    fee: 0.003,
                    network: 'ethereum',
                    address: '0x742d35Cc6634C0532925a3b844Bc454e4438f44e'
                },
                {
                    symbol: 'USDT',
                    name: 'Tether',
                    icon: 'usdt.png',
                    enabled: true,
                    minDeposit: 10,
                    minWithdrawal: 20,
                    fee: 1,
                    network: 'ERC20',
                    address: '0x742d35Cc6634C0532925a3b844Bc454e4438f44e'
                }
            ],
            
            services: [
                {
                    id: 'wise-recharge',
                    name: 'Recharge Wise',
                    enabled: true,
                    minAmount: 5,
                    maxAmount: 10000,
                    fee: 0.02,
                    processingTime: 'instantané',
                    description: 'Rechargez votre compte Wise rapidement'
                },
                {
                    id: 'crypto-buy',
                    name: 'Achat Crypto',
                    enabled: true,
                    minAmount: 10,
                    maxAmount: 50000,
                    fee: 0.01,
                    processingTime: 'instantané',
                    description: 'Achetez des cryptomonnaies facilement'
                }
            ],
            
            systemSettings: {
                siteName: 'PayFusion',
                siteLogo: '/assets/images/logo/logo.png',
                primaryColor: '#FFD700',
                secondaryColor: '#0A0A0F',
                maintenanceMode: false,
                registrationEnabled: true,
                kycRequired: true,
                withdrawalEnabled: true,
                depositEnabled: true
            }
        };

        try {
            // Vérifier si les données existent déjà
            const settingsSnapshot = await db.collection('systemSettings').get();
            
            if (settingsSnapshot.empty) {
                // Créer les données initiales
                await db.collection('cryptoCurrencies').doc('BTC').set(initialData.cryptoCurrencies[0]);
                await db.collection('cryptoCurrencies').doc('ETH').set(initialData.cryptoCurrencies[1]);
                await db.collection('cryptoCurrencies').doc('USDT').set(initialData.cryptoCurrencies[2]);
                
                await db.collection('services').doc('wise-recharge').set(initialData.services[0]);
                await db.collection('services').doc('crypto-buy').set(initialData.services[1]);
                
                await db.collection('systemSettings').doc('general').set(initialData.systemSettings);
                
                console.log('Données initiales créées avec succès');
            }
        } catch (error) {
            console.error('Erreur création données initiales:', error);
        }
    }

    // CRUD Operations
    async createUser(userData) {
        try {
            const userRef = db.collection('users').doc(userData.uid);
            await userRef.set({
                ...userData,
                createdAt: firebase.firestore.FieldValue.serverTimestamp(),
                updatedAt: firebase.firestore.FieldValue.serverTimestamp()
            });
            
            return { success: true, id: userRef.id };
        } catch (error) {
            console.error('Erreur création utilisateur:', error);
            return { success: false, error: error.message };
        }
    }

    async getUser(userId) {
        try {
            const userDoc = await db.collection('users').doc(userId).get();
            
            if (userDoc.exists) {
                return { success: true, data: userDoc.data() };
            } else {
                return { success: false, error: 'Utilisateur non trouvé' };
            }
        } catch (error) {
            console.error('Erreur récupération utilisateur:', error);
            return { success: false, error: error.message };
        }
    }

    async updateUser(userId, updates) {
        try {
            await db.collection('users').doc(userId).update({
                ...updates,
                updatedAt: firebase.firestore.FieldValue.serverTimestamp()
            });
            
            return { success: true };
        } catch (error) {
            console.error('Erreur mise à jour utilisateur:', error);
            return { success: false, error: error.message };
        }
    }

    async createTransaction(transactionData) {
        try {
            const transactionRef = db.collection('transactions').doc();
            
            await transactionRef.set({
                ...transactionData,
                id: transactionRef.id,
                createdAt: firebase.firestore.FieldValue.serverTimestamp(),
                updatedAt: firebase.firestore.FieldValue.serverTimestamp()
            });
            
            return { success: true, id: transactionRef.id };
        } catch (error) {
            console.error('Erreur création transaction:', error);
            return { success: false, error: error.message };
        }
    }

    async getTransactions(userId, filters = {}) {
        try {
            let query = db.collection('transactions');
            
            // Filtrer par utilisateur si spécifié
            if (userId) {
                query = query.where('userId', '==', userId);
            }
            
            // Appliquer d'autres filtres
            if (filters.type) {
                query = query.where('type', '==', filters.type);
            }
            
            if (filters.status) {
                query = query.where('status', '==', filters.status);
            }
            
            if (filters.symbol) {
                query = query.where('symbol', '==', filters.symbol);
            }
            
            // Trier par date
            query = query.orderBy('createdAt', 'desc');
            
            // Limiter si spécifié
            if (filters.limit) {
                query = query.limit(filters.limit);
            }
            
            const snapshot = await query.get();
            const transactions = [];
            
            snapshot.forEach(doc => {
                transactions.push({ id: doc.id, ...doc.data() });
            });
            
            return { success: true, data: transactions };
        } catch (error) {
            console.error('Erreur récupération transactions:', error);
            return { success: false, error: error.message };
        }
    }

    async updateTransaction(transactionId, updates) {
        try {
            await db.collection('transactions').doc(transactionId).update({
                ...updates,
                updatedAt: firebase.firestore.FieldValue.serverTimestamp()
            });
            
            return { success: true };
        } catch (error) {
            console.error('Erreur mise à jour transaction:', error);
            return { success: false, error: error.message };
        }
    }

    // Gestion des cryptomonnaies
    async getCryptoCurrencies() {
        try {
            const snapshot = await db.collection('cryptoCurrencies').get();
            const cryptos = [];
            
            snapshot.forEach(doc => {
                cryptos.push({ id: doc.id, ...doc.data() });
            });
            
            return { success: true, data: cryptos };
        } catch (error) {
            console.error('Erreur récupération cryptos:', error);
            return { success: false, error: error.message };
        }
    }

    async updateCryptoCurrency(symbol, updates) {
        try {
            await db.collection('cryptoCurrencies').doc(symbol).update({
                ...updates,
                updatedAt: firebase.firestore.FieldValue.serverTimestamp()
            });
            
            return { success: true };
        } catch (error) {
            console.error('Erreur mise à jour crypto:', error);
            return { success: false, error: error.message };
        }
    }

    // Gestion des services
    async getServices() {
        try {
            const snapshot = await db.collection('services').get();
            const services = [];
            
            snapshot.forEach(doc => {
                services.push({ id: doc.id, ...doc.data() });
            });
            
            return { success: true, data: services };
        } catch (error) {
            console.error('Erreur récupération services:', error);
            return { success: false, error: error.message };
        }
    }

    async updateService(serviceId, updates) {
        try {
            await db.collection('services').doc(serviceId).update({
                ...updates,
                updatedAt: firebase.firestore.FieldValue.serverTimestamp()
            });
            
            return { success: true };
        } catch (error) {
            console.error('Erreur mise à jour service:', error);
            return { success: false, error: error.message };
        }
    }

    // Gestion des paramètres système
    async getSystemSettings() {
        try {
            const doc = await db.collection('systemSettings').doc('general').get();
            
            if (doc.exists) {
                return { success: true, data: doc.data() };
            } else {
                return { success: false, error: 'Paramètres non trouvés' };
            }
        } catch (error) {
            console.error('Erreur récupération paramètres:', error);
            return { success: false, error: error.message };
        }
    }

    async updateSystemSettings(updates) {
        try {
            await db.collection('systemSettings').doc('general').update({
                ...updates,
                updatedAt: firebase.firestore.FieldValue.serverTimestamp()
            });
            
            return { success: true };
        } catch (error) {
            console.error('Erreur mise à jour paramètres:', error);
            return { success: false, error: error.message };
        }
    }

    // Statistiques et analytics
    async getDashboardStats() {
        try {
            const [
                usersSnapshot,
                transactionsSnapshot,
                kycSnapshot,
                depositsSnapshot
            ] = await Promise.all([
                db.collection('users').get(),
                db.collection('transactions').get(),
                db.collection('users').where('kycStatus', '==', 'verified').get(),
                db.collection('transactions').where('type', '==', 'deposit').get()
            ]);

            // Calculer le volume total des dépôts
            let totalVolume = 0;
            depositsSnapshot.forEach(doc => {
                const data = doc.data();
                totalVolume += parseFloat(data.amount) || 0;
            });

            return {
                success: true,
                data: {
                    totalUsers: usersSnapshot.size,
                    totalTransactions: transactionsSnapshot.size,
                    verifiedUsers: kycSnapshot.size,
                    totalVolume: totalVolume,
                    pendingKYC: usersSnapshot.size - kycSnapshot.size
                }
            };
        } catch (error) {
            console.error('Erreur récupération stats:', error);
            return { success: false, error: error.message };
        }
    }

    // Recherche avancée
    async searchUsers(query, filters = {}) {
        try {
            let usersQuery = db.collection('users');
            
            // Recherche par email ou nom
            if (query) {
                // Note: Firestore ne supporte pas les recherches textuelles natives
                // Dans une vraie app, utiliser Algolia ou ElasticSearch
                usersQuery = usersQuery.where('email', '>=', query)
                                      .where('email', '<=', query + '\uf8ff');
            }
            
            // Appliquer les filtres
            if (filters.kycStatus) {
                usersQuery = usersQuery.where('kycStatus', '==', filters.kycStatus);
            }
            
            if (filters.accountStatus) {
                usersQuery = usersQuery.where('accountStatus', '==', filters.accountStatus);
            }
            
            if (filters.country) {
                usersQuery = usersQuery.where('country', '==', filters.country);
            }
            
            const snapshot = await usersQuery.limit(50).get();
            const users = [];
            
            snapshot.forEach(doc => {
                users.push({ id: doc.id, ...doc.data() });
            });
            
            return { success: true, data: users };
        } catch (error) {
            console.error('Erreur recherche utilisateurs:', error);
            return { success: false, error: error.message };
        }
    }

    // Gestion des logs
    async logActivity(userId, activityType, details = {}) {
        try {
            await db.collection('activityLogs').add({
                userId: userId,
                activityType: activityType,
                details: details,
                timestamp: firebase.firestore.FieldValue.serverTimestamp(),
                ipAddress: await this.getClientIP(),
                userAgent: navigator.userAgent
            });
            
            return { success: true };
        } catch (error) {
            console.error('Erreur journalisation activité:', error);
            return { success: false, error: error.message };
        }
    }

    async getClientIP() {
        try {
            const response = await fetch('https://api.ipify.org?format=json');
            const data = await response.json();
            return data.ip;
        } catch (error) {
            return 'unknown';
        }
    }

    // Gestion des notifications
    async createNotification(userId, notificationData) {
        try {
            await db.collection('users').doc(userId)
                .collection('notifications').add({
                    ...notificationData,
                    read: false,
                    createdAt: firebase.firestore.FieldValue.serverTimestamp()
                });
            
            return { success: true };
        } catch (error) {
            console.error('Erreur création notification:', error);
            return { success: false, error: error.message };
        }
    }

    async markNotificationAsRead(userId, notificationId) {
        try {
            await db.collection('users').doc(userId)
                .collection('notifications').doc(notificationId)
                .update({
                    read: true,
                    readAt: firebase.firestore.FieldValue.serverTimestamp()
                });
            
            return { success: true };
        } catch (error) {
            console.error('Erreur marquage notification:', error);
            return { success: false, error: error.message };
        }
    }

    // Backup et restauration
    async createBackup() {
        try {
            const collections = ['users', 'transactions', 'cryptoCurrencies', 'services'];
            const backupData = {};
            
            for (const collection of collections) {
                const snapshot = await db.collection(collection).get();
                backupData[collection] = [];
                
                snapshot.forEach(doc => {
                    backupData[collection].push({
                        id: doc.id,
                        data: doc.data()
                    });
                });
            }
            
            // Sauvegarder dans une nouvelle collection
            await db.collection('backups').add({
                data: backupData,
                createdAt: firebase.firestore.FieldValue.serverTimestamp(),
                createdBy: auth.currentUser?.uid || 'system'
            });
            
            return { success: true, data: backupData };
        } catch (error) {
            console.error('Erreur création backup:', error);
            return { success: false, error: error.message };
        }
    }

    // Transactions batch
    async batchUpdate(updates) {
        const batch = db.batch();
        
        try {
            updates.forEach(update => {
                const docRef = db.collection(update.collection).doc(update.id);
                
                if (update.action === 'update') {
                    batch.update(docRef, update.data);
                } else if (update.action === 'delete') {
                    batch.delete(docRef);
                } else if (update.action === 'set') {
                    batch.set(docRef, update.data);
                }
            });
            
            await batch.commit();
            return { success: true };
        } catch (error) {
            console.error('Erreur batch update:', error);
            return { success: false, error: error.message };
        }
    }
}

// Initialiser le gestionnaire Firestore
const firestoreManager = new FirestoreManager();
window.firestoreManager = firestoreManager;

// Exporter pour utilisation dans d'autres fichiers
export { firestoreManager };
```

2. storage.js - Gestion Firebase Storage pour fichiers

```javascript
// Gestion Firebase Storage pour PayFusion
class StorageManager {
    constructor() {
        this.init();
    }

    init() {
        this.setupStorageRules();
        this.setupQuotas();
    }

    setupStorageRules() {
        // Règles de sécurité Storage (à implémenter dans Firebase Console)
        const storageRules = `
            rules_version = '2';
            service firebase.storage {
                match /b/{bucket}/o {
                    // Dossiers publics
                    match /public/{allPaths=**} {
                        allow read: if true;
                        allow write: if request.auth != null;
                    }
                    
                    // KYC documents - sécurisés
                    match /kyc/{userId}/{fileName} {
                        allow read: if request.auth != null && 
                                     (request.auth.uid == userId || 
                                      isAdmin(request.auth.token.email));
                        allow write: if request.auth != null && 
                                      request.auth.uid == userId;
                    }
                    
                    // Avatars utilisateurs
                    match /avatars/{userId}/{fileName} {
                        allow read: if true;
                        allow write: if request.auth != null && 
                                      request.auth.uid == userId;
                    }
                    
                    // Documents admin
                    match /admin/{allPaths=**} {
                        allow read, write: if request.auth != null && 
                                            isAdmin(request.auth.token.email);
                    }
                    
                    function isAdmin(email) {
                        return email == "payfusion@admin.com";
                    }
                }
            }
        `;
        
        console.log('Règles Storage configurées');
    }

    setupQuotas() {
        // Configurer les quotas de stockage
        this.quotas = {
            kyc: {
                maxFileSize: 5 * 1024 * 1024, // 5MB
                allowedTypes: ['image/jpeg', 'image/png', 'application/pdf'],
                maxFilesPerUser: 10
            },
            avatars: {
                maxFileSize: 2 * 1024 * 1024, // 2MB
                allowedTypes: ['image/jpeg', 'image/png', 'image/gif'],
                maxFilesPerUser: 1
            },
            documents: {
                maxFileSize: 10 * 1024 * 1024, // 10MB
                allowedTypes: ['application/pdf', 'image/*'],
                maxFilesPerUser: 20
            }
        };
    }

    // Upload de fichier KYC
    async uploadKYCFile(userId, file, fileType) {
        try {
            // Validation du fichier
            const validation = this.validateFile(file, 'kyc');
            if (!validation.valid) {
                return { success: false, error: validation.message };
            }

            // Générer un nom de fichier sécurisé
            const fileName = this.generateSecureFileName(file, fileType);
            const filePath = `kyc/${userId}/${fileName}`;
            
            // Upload vers Firebase Storage
            const storageRef = storage.ref(filePath);
            const snapshot = await storageRef.put(file);
            
            // Obtenir l'URL de téléchargement
            const downloadURL = await snapshot.ref.getDownloadURL();
            
            // Journaliser l'upload
            await this.logUpload(userId, filePath, fileType, file.size);
            
            return {
                success: true,
                url: downloadURL,
                path: filePath,
                fileName: fileName,
                size: file.size
            };
            
        } catch (error) {
            console.error('Erreur upload KYC:', error);
            return { success: false, error: error.message };
        }
    }

    // Upload avatar utilisateur
    async uploadAvatar(userId, file) {
        try {
            // Validation du fichier
            const validation = this.validateFile(file, 'avatars');
            if (!validation.valid) {
                return { success: false, error: validation.message };
            }

            // Supprimer l'ancien avatar s'il existe
            await this.deleteOldAvatar(userId);
            
            // Générer un nom de fichier
            const fileName = `avatar_${Date.now()}.${this.getFileExtension(file.name)}`;
            const filePath = `avatars/${userId}/${fileName}`;
            
            // Redimensionner l'image si nécessaire
            const processedFile = await this.processImage(file, 200, 200);
            
            // Upload
            const storageRef = storage.ref(filePath);
            const snapshot = await storageRef.put(processedFile);
            const downloadURL = await snapshot.ref.getDownloadURL();
            
            return {
                success: true,
                url: downloadURL,
                path: filePath,
                fileName: fileName
            };
            
        } catch (error) {
            console.error('Erreur upload avatar:', error);
            return { success: false, error: error.message };
        }
    }

    // Upload document admin
    async uploadAdminDocument(file, folder = 'documents') {
        try {
            const user = auth.currentUser;
            if (!user || user.email !== 'payfusion@admin.com') {
                return { success: false, error: 'Accès non autorisé' };
            }

            const validation = this.validateFile(file, 'documents');
            if (!validation.valid) {
                return { success: false, error: validation.message };
            }

            const fileName = this.generateSecureFileName(file);
            const filePath = `admin/${folder}/${fileName}`;
            
            const storageRef = storage.ref(filePath);
            const snapshot = await storageRef.put(file);
            const downloadURL = await snapshot.ref.getDownloadURL();
            
            return {
                success: true,
                url: downloadURL,
                path: filePath,
                fileName: fileName
            };
            
        } catch (error) {
            console.error('Erreur upload document admin:', error);
            return { success: false, error: error.message };
        }
    }

    // Télécharger un fichier
    async downloadFile(filePath) {
        try {
            const storageRef = storage.ref(filePath);
            const url = await storageRef.getDownloadURL();
            
            return {
                success: true,
                url: url
            };
        } catch (error) {
            console.error('Erreur téléchargement:', error);
            return { success: false, error: error.message };
        }
    }

    // Supprimer un fichier
    async deleteFile(filePath) {
        try {
            const storageRef = storage.ref(filePath);
            await storageRef.delete();
            
            return { success: true };
        } catch (error) {
            console.error('Erreur suppression fichier:', error);
            return { success: false, error: error.message };
        }
    }

    // Lister les fichiers d'un utilisateur
    async listUserFiles(userId, folder = 'kyc') {
        try {
            const storageRef = storage.ref(`${folder}/${userId}`);
            const result = await storageRef.listAll();
            
            const files = [];
            
            for (const itemRef of result.items) {
                const metadata = await itemRef.getMetadata();
                const url = await itemRef.getDownloadURL();
                
                files.push({
                    name: itemRef.name,
                    url: url,
                    size: metadata.size,
                    contentType: metadata.contentType,
                    updated: metadata.updated,
                    path: itemRef.fullPath
                });
            }
            
            return { success: true, files: files };
        } catch (error) {
            console.error('Erreur listage fichiers:', error);
            return { success: false, error: error.message };
        }
    }

    // Méthodes utilitaires
    validateFile(file, type = 'kyc') {
        const quota = this.quotas[type] || this.quotas.kyc;
        
        // Vérifier la taille
        if (file.size > quota.maxFileSize) {
            return {
                valid: false,
                message: `Fichier trop volumineux. Maximum: ${quota.maxFileSize / 1024 / 1024}MB`
            };
        }
        
        // Vérifier le type
        if (!quota.allowedTypes.includes(file.type)) {
            return {
                valid: false,
                message: `Type de fichier non autorisé. Types acceptés: ${quota.allowedTypes.join(', ')}`
            };
        }
        
        return { valid: true, message: 'Fichier valide' };
    }

    generateSecureFileName(file, prefix = '') {
        const timestamp = Date.now();
        const random = Math.random().toString(36).substring(2, 15);
        const extension = this.getFileExtension(file.name);
        
        let fileName = `${timestamp}_${random}.${extension}`;
        
        if (prefix) {
            fileName = `${prefix}_${fileName}`;
        }
        
        return fileName;
    }

    getFileExtension(filename) {
        return filename.slice((filename.lastIndexOf(".") - 1 >>> 0) + 2);
    }

    async processImage(file, maxWidth, maxHeight) {
        return new Promise((resolve, reject) => {
            if (!file.type.startsWith('image/')) {
                resolve(file);
                return;
            }
            
            const reader = new FileReader();
            reader.onload = (e) => {
                const img = new Image();
                img.onload = () => {
                    const canvas = document.createElement('canvas');
                    let width = img.width;
                    let height = img.height;
                    
                    // Redimensionner si nécessaire
                    if (width > maxWidth || height > maxHeight) {
                        const ratio = Math.min(maxWidth / width, maxHeight / height);
                        width = width * ratio;
                        height = height * ratio;
                    }
                    
                    canvas.width = width;
                    canvas.height = height;
                    
                    const ctx = canvas.getContext('2d');
                    ctx.drawImage(img, 0, 0, width, height);
                    
                    canvas.toBlob((blob) => {
                        const processedFile = new File([blob], file.name, {
                            type: 'image/jpeg',
                            lastModified: Date.now()
                        });
                        resolve(processedFile);
                    }, 'image/jpeg', 0.8);
                };
                img.src = e.target.result;
            };
            reader.onerror = reject;
            reader.readAsDataURL(file);
        });
    }

    async deleteOldAvatar(userId) {
        try {
            const storageRef = storage.ref(`avatars/${userId}`);
            const result = await storageRef.listAll();
            
            const deletePromises = result.items.map(item => item.delete());
            await Promise.all(deletePromises);
            
        } catch (error) {
            console.error('Erreur suppression ancien avatar:', error);
        }
    }

    async logUpload(userId, filePath, fileType, fileSize) {
        try {
            await db.collection('storageLogs').add({
                userId: userId,
                filePath: filePath,
                fileType: fileType,
                fileSize: fileSize,
                timestamp: firebase.firestore.FieldValue.serverTimestamp(),
                ipAddress: await this.getClientIP()
            });
        } catch (error) {
            console.error('Erreur journalisation upload:', error);
        }
    }

    async getClientIP() {
        try {
            const response = await fetch('https://api.ipify.org?format=json');
            const data = await response.json();
            return data.ip;
        } catch (error) {
            return 'unknown';
        }
    }

    // Gestion des quotas
    async getUserStorageUsage(userId) {
        try {
            const [kycFiles, avatarFiles] = await Promise.all([
                this.listUserFiles(userId, 'kyc'),
                this.listUserFiles(userId, 'avatars')
            ]);
            
            let totalSize = 0;
            const files = [];
            
            if (kycFiles.success) {
                kycFiles.files.forEach(file => {
                    totalSize += file.size;
                    files.push(file);
                });
            }
            
            if (avatarFiles.success) {
                avatarFiles.files.forEach(file => {
                    totalSize += file.size;
                    files.push(file);
                });
            }
            
            return {
                success: true,
                totalSize: totalSize,
                fileCount: files.length,
                files: files
            };
        } catch (error) {
            console.error('Erreur calcul usage stockage:', error);
            return { success: false, error: error.message };
        }
    }

    // Compression de fichiers
    async compressFile(file) {
        return new Promise((resolve, reject) => {
            if (!file.type.startsWith('image/')) {
                resolve(file);
                return;
            }
            
            const reader = new FileReader();
            reader.onload = (e) => {
                const img = new Image();
                img.onload = () => {
                    const canvas = document.createElement('canvas');
                    canvas.width = img.width;
                    canvas.height = img.height;
                    
                    const ctx = canvas.getContext('2d');
                    ctx.drawImage(img, 0, 0);
                    
                    // Compression qualité 80%
                    canvas.toBlob((blob) => {
                        const compressedFile = new File([blob], file.name, {
                            type: 'image/jpeg',
                            lastModified: Date.now()
                        });
                        resolve(compressedFile);
                    }, 'image/jpeg', 0.8);
                };
                img.src = e.target.result;
            };
            reader.onerror = reject;
            reader.readAsDataURL(file);
        });
    }

    // Générer URL signée (valable temporairement)
    async generateSignedUrl(filePath, expiresIn = 3600) {
        try {
            const storageRef = storage.ref(filePath);
            const url = await storageRef.getDownloadURL();
            
            // Note: Pour des URLs vraiment signées, utiliser Cloud Functions
            return {
                success: true,
                url: url,
                expiresAt: Date.now() + (expiresIn * 1000)
            };
        } catch (error) {
            console.error('Erreur génération URL signée:', error);
            return { success: false, error: error.message };
        }
    }

    // Sauvegarde automatique
    async autoBackupImportantFiles() {
        try {
            // Cette fonction serait appelée périodiquement pour sauvegarder
            // les fichiers importants dans un bucket de backup
            
            const user = auth.currentUser;
            if (!user || user.email !== 'payfusion@admin.com') {
                return { success: false, error: 'Accès non autorisé' };
            }
            
            // Implémentation spécifique selon les besoins
            console.log('Sauvegarde automatique exécutée');
            return { success: true };
            
        } catch (error) {
            console.error('Erreur sauvegarde automatique:', error);
            return { success: false, error: error.message };
        }
    }
}

// Initialiser le gestionnaire Storage
const storageManager = new StorageManager();
window.storageManager = storageManager;
```

