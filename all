3. Configuration Firebase - firebase-config.js

```javascript
// Configuration Firebase pour PayFusion
const firebaseConfig = {
    apiKey: "AIzaSyD...VotreCléAPI...",
    authDomain: "payfusion-finance.firebaseapp.com",
    projectId: "payfusion-finance",
    storageBucket: "payfusion-finance.appspot.com",
    messagingSenderId: "123456789012",
    appId: "1:123456789012:web:abcdef1234567890",
    measurementId: "G-ABCDEF1234"
};

// Initialiser Firebase
firebase.initializeApp(firebaseConfig);

// Services Firebase
const auth = firebase.auth();
const db = firebase.firestore();
const storage = firebase.storage();
const analytics = firebase.analytics();

// Configuration EmailJS
const emailjsConfig = {
    serviceID: "service_payfusion",
    templateID: "template_verification",
    userID: "user_abcdef1234567890"
};

// Configuration Admin
const ADMIN_CONFIG = {
    email: "payfusion@admin.com",
    password: "PayF!Dec25",
    permissions: {
        canEditAnything: true,
        canDeleteUsers: true,
        canModifyContent: true,
        canAccessAnalytics: true,
        canManagePayments: true,
        canConfigureSystem: true
    }
};

// Fonction pour vérifier si l'utilisateur est admin
function isAdminUser(user) {
    return user && user.email === ADMIN_CONFIG.email;
}

// Fonction pour initialiser l'admin
async function initializeAdmin() {
    try {
        // Vérifier si l'admin existe déjà
        const adminSnapshot = await db.collection('admins')
            .where('email', '==', ADMIN_CONFIG.email)
            .get();
        
        if (adminSnapshot.empty) {
            // Créer l'admin
            await db.collection('admins').add({
                email: ADMIN_CONFIG.email,
                createdAt: firebase.firestore.FieldValue.serverTimestamp(),
                permissions: ADMIN_CONFIG.permissions,
                isSuperAdmin: true,
                lastLogin: null
            });
            console.log('Compte admin créé avec succès');
        }
        
        // Configuration spéciale pour l'admin
        if (auth.currentUser && auth.currentUser.email === ADMIN_CONFIG.email) {
            // Activer les fonctionnalités admin
            enableAdminFeatures();
        }
    } catch (error) {
        console.error('Erreur initialisation admin:', error);
    }
}

// Fonctions d'authentification
async function loginUser(email, password) {
    try {
        const userCredential = await auth.signInWithEmailAndPassword(email, password);
        
        if (isAdminUser(userCredential.user)) {
            // Redirection vers le dashboard admin
            window.location.href = 'admin-dashboard.html';
        } else {
            // Redirection vers le dashboard utilisateur
            window.location.href = 'dashboard.html';
        }
        
        return { success: true, user: userCredential.user };
    } catch (error) {
        console.error('Erreur connexion:', error);
        return { success: false, error: error.message };
    }
}

async function registerUser(userData) {
    try {
        // Créer l'utilisateur dans Firebase Auth
        const userCredential = await auth.createUserWithEmailAndPassword(
            userData.email,
            userData.password
        );
        
        // Créer le document utilisateur dans Firestore
        await db.collection('users').doc(userCredential.user.uid).set({
            firstName: userData.firstName,
            lastName: userData.lastName,
            email: userData.email,
            phone: userData.phone,
            country: userData.country,
            dateOfBirth: userData.dateOfBirth,
            kycVerified: false,
            createdAt: firebase.firestore.FieldValue.serverTimestamp(),
            lastLogin: firebase.firestore.FieldValue.serverTimestamp(),
            accountStatus: 'active',
            balance: {
                usd: 0,
                btc: 0,
                eth: 0,
                usdt: 0,
                bnb: 0
            }
        });
        
        // Envoyer l'email de vérification
        await userCredential.user.sendEmailVerification();
        
        return { 
            success: true, 
            user: userCredential.user,
            message: 'Inscription réussie! Veuillez vérifier votre email.'
        };
    } catch (error) {
        console.error('Erreur inscription:', error);
        return { success: false, error: error.message };
    }
}

// Fonction pour uploader des fichiers (KYC)
async function uploadKYCFile(userId, file, fileType) {
    try {
        const storageRef = storage.ref(`kyc/${userId}/${fileType}_${Date.now()}`);
        const snapshot = await storageRef.put(file);
        const downloadURL = await snapshot.ref.getDownloadURL();
        
        // Mettre à jour le statut KYC dans Firestore
        await db.collection('users').doc(userId).update({
            [`kyc.${fileType}`]: downloadURL,
            kycStatus: 'pending'
        });
        
        return { success: true, url: downloadURL };
    } catch (error) {
        console.error('Erreur upload KYC:', error);
        return { success: false, error: error.message };
    }
}

// Écouteur d'état d'authentification
auth.onAuthStateChanged((user) => {
    if (user) {
        // Utilisateur connecté
        updateUIForLoggedInUser(user);
        
        if (isAdminUser(user)) {
            showAdminPanel();
        }
        
        // Mettre à jour le dernier login
        db.collection('users').doc(user.uid).update({
            lastLogin: firebase.firestore.FieldValue.serverTimestamp()
        });
    } else {
        // Utilisateur déconnecté
        updateUIForLoggedOutUser();
    }
});

// Fonctions utilitaires
function updateUIForLoggedInUser(user) {
    // Mettre à jour l'interface pour l'utilisateur connecté
    const loginBtn = document.querySelector('.btn-login');
    const registerBtn = document.querySelector('.btn-register');
    const userMenu = document.querySelector('.user-menu');
    
    if (loginBtn) loginBtn.style.display = 'none';
    if (registerBtn) registerBtn.style.display = 'none';
    if (userMenu) userMenu.style.display = 'flex';
}

function updateUIForLoggedOutUser() {
    // Mettre à jour l'interface pour l'utilisateur déconnecté
    const loginBtn = document.querySelector('.btn-login');
    const registerBtn = document.querySelector('.btn-register');
    const userMenu = document.querySelector('.user-menu');
    
    if (loginBtn) loginBtn.style.display = 'flex';
    if (registerBtn) registerBtn.style.display = 'flex';
    if (userMenu) userMenu.style.display = 'none';
}

function showAdminPanel() {
    const adminPanel = document.querySelector('.admin-access');
    if (adminPanel) {
        adminPanel.style.display = 'block';
    }
}

// Initialiser l'admin au chargement
document.addEventListener('DOMContentLoaded', initializeAdmin);
```

