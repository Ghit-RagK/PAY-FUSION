24. Script de Build - build.js

```javascript
const fs = require('fs');
const path = require('path');
const { execSync } = require('child_process');
const uglifyJS = require('uglify-js');
const CleanCSS = require('clean-css');
const htmlMinifier = require('html-minifier');

// Configuration
const config = {
  sourceDir: './',
  buildDir: './dist',
  assets: {
    js: 'assets/js/',
    css: 'assets/css/',
    images: 'assets/images/'
  }
};

// Créer le dossier de build
if (!fs.existsSync(config.buildDir)) {
  fs.mkdirSync(config.buildDir, { recursive: true });
}

// Fonction pour minifier les fichiers JS
function minifyJS(filePath) {
  try {
    const code = fs.readFileSync(filePath, 'utf8');
    const result = uglifyJS.minify(code, {
      compress: {
        drop_console: true,
        drop_debugger: true
      },
      mangle: {
        toplevel: true
      },
      output: {
        comments: false
      }
    });
    
    if (result.error) {
      console.error(`Erreur minification JS ${filePath}:`, result.error);
      return code;
    }
    
    return result.code;
  } catch (error) {
    console.error(`Erreur lecture JS ${filePath}:`, error);
    return '';
  }
}

// Fonction pour minifier les fichiers CSS
function minifyCSS(filePath) {
  try {
    const css = fs.readFileSync(filePath, 'utf8');
    const result = new CleanCSS({
      level: 2,
      format: 'keep-breaks'
    }).minify(css);
    
    if (result.errors.length > 0) {
      console.error(`Erreurs minification CSS ${filePath}:`, result.errors);
      return css;
    }
    
    return result.styles;
  } catch (error) {
    console.error(`Erreur lecture CSS ${filePath}:`, error);
    return '';
  }
}

// Fonction pour minifier les fichiers HTML
function minifyHTML(filePath) {
  try {
    const html = fs.readFileSync(filePath, 'utf8');
    const result = htmlMinifier.minify(html, {
      removeComments: true,
      collapseWhitespace: true,
      removeAttributeQuotes: true,
      removeEmptyAttributes: true,
      minifyCSS: true,
      minifyJS: true,
      removeScriptTypeAttributes: true,
      removeStyleLinkTypeAttributes: true
    });
    
    return result;
  } catch (error) {
    console.error(`Erreur minification HTML ${filePath}:`, error);
    return html;
  }
}

// Fonction pour copier les fichiers
function copyFile(source, destination) {
  const destDir = path.dirname(destination);
  
  if (!fs.existsSync(destDir)) {
    fs.mkdirSync(destDir, { recursive: true });
  }
  
  fs.copyFileSync(source, destination);
  console.log(`Copié: ${source} -> ${destination}`);
}

// Fonction pour construire l'application
async function build() {
  console.log('🚀 Démarrage de la construction PayFusion...\n');
  
  // 1. Minifier et copier les fichiers JS
  console.log('📦 Traitement des fichiers JavaScript...');
  const jsFiles = [
    'assets/js/main.js',
    'assets/js/admin-panel.js',
    'assets/js/crypto-api.js',
    'assets/js/validation.js',
    'assets/js/auth.js',
    'assets/js/wallet.js',
    'assets/js/kyc-verification.js',
    'assets/js/ui-manager.js'
  ];
  
  jsFiles.forEach(jsFile => {
    if (fs.existsSync(jsFile)) {
      const minified = minifyJS(jsFile);
      const destPath = path.join(config.buildDir, jsFile);
      
      const destDir = path.dirname(destPath);
      if (!fs.existsSync(destDir)) {
        fs.mkdirSync(destDir, { recursive: true });
      }
      
      fs.writeFileSync(destPath, minified);
      console.log(`✓ Minifié: ${jsFile}`);
    }
  });
  
  // 2. Minifier et copier les fichiers CSS
  console.log('\n🎨 Traitement des fichiers CSS...');
  const cssFiles = [
    'assets/css/main.css',
    'assets/css/admin.css',
    'assets/css/auth.css',
    'assets/css/responsive.css',
    'assets/css/wallet.css'
  ];
  
  cssFiles.forEach(cssFile => {
    if (fs.existsSync(cssFile)) {
      const minified = minifyCSS(cssFile);
      const destPath = path.join(config.buildDir, cssFile);
      
      const destDir = path.dirname(destPath);
      if (!fs.existsSync(destDir)) {
        fs.mkdirSync(destDir, { recursive: true });
      }
      
      fs.writeFileSync(destPath, minified);
      console.log(`✓ Minifié: ${cssFile}`);
    }
  });
  
  // 3. Minifier et copier les fichiers HTML
  console.log('\n📄 Traitement des fichiers HTML...');
  const htmlFiles = [
    'index.html',
    'dashboard.html',
    'admin-dashboard.html',
    'login.html',
    'register.html',
    'kyc-verification.html',
    'reset-password.html',
    'services.html',
    'wallet.html',
    'crypto-exchange.html',
    'partners.html',
    'settings.html',
    'support.html',
    'community.html',
    'offline.html'
  ];
  
  htmlFiles.forEach(htmlFile => {
    if (fs.existsSync(htmlFile)) {
      const minified = minifyHTML(htmlFile);
      const destPath = path.join(config.buildDir, htmlFile);
      
      const destDir = path.dirname(destPath);
      if (!fs.existsSync(destDir)) {
        fs.mkdirSync(destDir, { recursive: true });
      }
      
      fs.writeFileSync(destPath, minified);
      console.log(`✓ Minifié: ${htmlFile}`);
    }
  });
  
  // 4. Copier les fichiers Firebase
  console.log('\n🔥 Copie des fichiers Firebase...');
  const firebaseFiles = [
    'firebase/firebase-config.js',
    'firebase/auth.js',
    'firebase/firestore.js',
    'firebase/storage.js'
  ];
  
  firebaseFiles.forEach(fbFile => {
    if (fs.existsSync(fbFile)) {
      const destPath = path.join(config.buildDir, fbFile);
      
      const destDir = path.dirname(destPath);
      if (!fs.existsSync(destDir)) {
        fs.mkdirSync(destDir, { recursive: true });
      }
      
      copyFile(fbFile, destPath);
    }
  });
  
  // 5. Copier les fichiers EmailJS
  console.log('\n📧 Copie des fichiers EmailJS...');
  if (fs.existsSync('emailjs/email-config.js')) {
    const destPath = path.join(config.buildDir, 'emailjs/email-config.js');
    
    const destDir = path.dirname(destPath);
    if (!fs.existsSync(destDir)) {
      fs.mkdirSync(destDir, { recursive: true });
    }
    
    copyFile('emailjs/email-config.js', destPath);
  }
  
  // 6. Copier les assets (images, fonts)
  console.log('\n🖼️ Copie des assets...');
  const assetsDirs = ['assets/images', 'assets/fonts'];
  
  assetsDirs.forEach(assetDir => {
    if (fs.existsSync(assetDir)) {
      const destDir = path.join(config.buildDir, assetDir);
      
      // Créer récursivement
      if (!fs.existsSync(destDir)) {
        fs.mkdirSync(destDir, { recursive: true });
      }
      
      // Copier récursivement
      function copyRecursive(source, destination) {
        const items = fs.readdirSync(source);
        
        items.forEach(item => {
          const sourcePath = path.join(source, item);
          const destPath = path.join(destination, item);
          const stat = fs.statSync(sourcePath);
          
          if (stat.isDirectory()) {
            if (!fs.existsSync(destPath)) {
              fs.mkdirSync(destPath, { recursive: true });
            }
            copyRecursive(sourcePath, destPath);
          } else {
            copyFile(sourcePath, destPath);
          }
        });
      }
      
      copyRecursive(assetDir, destDir);
    }
  });
  
  // 7. Copier les fichiers spéciaux
  console.log('\n📋 Copie des fichiers spéciaux...');
  const specialFiles = [
    'manifest.json',
    'sw.js',
    'robots.txt',
    'sitemap.xml',
    'favicon.ico'
  ];
  
  specialFiles.forEach(specialFile => {
    if (fs.existsSync(specialFile)) {
      const destPath = path.join(config.buildDir, specialFile);
      copyFile(specialFile, destPath);
    }
  });
  
  // 8. Créer le fichier .htaccess pour Apache
  console.log('\n🔧 Création fichier .htaccess...');
  const htaccessContent = `
# PayFusion - Configuration Apache
Options -Indexes
Options +FollowSymLinks

# Redirections HTTPS
RewriteEngine On
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Cache control
<FilesMatch "\.(css|js|jpg|jpeg|png|gif|ico|svg|woff|woff2|ttf|eot)$">
    Header set Cache-Control "max-age=31536000, public"
</FilesMatch>

<FilesMatch "\.(html|htm)$">
    Header set Cache-Control "max-age=3600, public"
</FilesMatch>

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/css text/javascript application/javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# Security headers
Header always set X-Content-Type-Options "nosniff"
Header always set X-Frame-Options "SAMEORIGIN"
Header always set X-XSS-Protection "1; mode=block"
Header always set Referrer-Policy "strict-origin-when-cross-origin"
Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"

# PWA support
AddType application/manifest+json .webmanifest

# Error pages
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html
  `;
  
  fs.writeFileSync(path.join(config.buildDir, '.htaccess'), htaccessContent);
  console.log('✓ Fichier .htaccess créé');
  
  // 9. Créer un rapport de build
  console.log('\n📊 Génération du rapport de build...');
  const buildReport = {
    timestamp: new Date().toISOString(),
    version: '1.0.0',
    stats: {
      jsFiles: jsFiles.length,
      cssFiles: cssFiles.length,
      htmlFiles: htmlFiles.length,
      totalSize: getDirectorySize(config.buildDir)
    }
  };
  
  fs.writeFileSync(
    path.join(config.buildDir, 'build-report.json'),
    JSON.stringify(buildReport, null, 2)
  );
  
  console.log('\n✅ Construction terminée avec succès !');
  console.log(`📁 Dossier de build: ${config.buildDir}`);
  console.log(`📦 Taille totale: ${formatBytes(buildReport.stats.totalSize)}`);
  console.log('\n🎯 Pour déployer:');
  console.log('   Vercel:    npm run deploy:vercel');
  console.log('   Netlify:   npm run deploy:netlify');
  console.log('   Firebase:  npm run deploy');
}

// Fonctions utilitaires
function getDirectorySize(dir) {
  let size = 0;
  
  function calculateSize(directory) {
    const items = fs.readdirSync(directory);
    
    items.forEach(item => {
      const itemPath = path.join(directory, item);
      const stat = fs.statSync(itemPath);
      
      if (stat.isDirectory()) {
        calculateSize(itemPath);
      } else {
        size += stat.size;
      }
    });
  }
  
  calculateSize(dir);
  return size;
}

function formatBytes(bytes, decimals = 2) {
  if (bytes === 0) return '0 Bytes';
  
  const k = 1024;
  const dm = decimals < 0 ? 0 : decimals;
  const sizes = ['Bytes', 'KB', 'MB', 'GB'];
  
  const i = Math.floor(Math.log(bytes) / Math.log(k));
  
  return parseFloat((bytes / Math.pow(k, i)).toFixed(dm)) + ' ' + sizes[i];
}

// Exécuter le build
build().catch(error => {
  console.error('❌ Erreur lors de la construction:', error);
  process.exit(1);
});
```

