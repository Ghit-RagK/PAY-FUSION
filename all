```

7. API Crypto - crypto-api.js

```javascript
// API Cryptomonnaies PayFusion
class CryptoAPI {
    constructor() {
        this.cryptoPrices = {};
        this.supportedCryptos = [
            { id: 'bitcoin', symbol: 'BTC', name: 'Bitcoin', color: '#F7931A' },
            { id: 'ethereum', symbol: 'ETH', name: 'Ethereum', color: '#627EEA' },
            { id: 'tether', symbol: 'USDT', name: 'Tether', color: '#26A17B' },
            { id: 'binancecoin', symbol: 'BNB', name: 'Binance Coin', color: '#F0B90B' },
            { id: 'ripple', symbol: 'XRP', name: 'Ripple', color: '#23292F' },
            { id: 'cardano', symbol: 'ADA', name: 'Cardano', color: '#0033AD' },
            { id: 'solana', symbol: 'SOL', name: 'Solana', color: '#00FFA3' },
            { id: 'polkadot', symbol: 'DOT', name: 'Polkadot', color: '#E6007A' },
            { id: 'dogecoin', symbol: 'DOGE', name: 'Dogecoin', color: '#C2A633' },
            { id: 'tron', symbol: 'TRX', name: 'TRON', color: '#FF060A' },
            { id: 'polygon', symbol: 'MATIC', name: 'Polygon', color: '#8247E5' },
            { id: 'litecoin', symbol: 'LTC', name: 'Litecoin', color: '#BFBBBB' },
            { id: 'chainlink', symbol: 'LINK', name: 'Chainlink', color: '#2A5ADA' }
        ];
        
        this.init();
    }
    
    async init() {
        await this.fetchAllPrices();
        this.startPriceUpdates();
        this.renderCryptoTable();
    }
    
    async fetchAllPrices() {
        try {
            const ids = this.supportedCryptos.map(crypto => crypto.id).join(',');
            const response = await fetch(
                `https://api.coingecko.com/api/v3/simple/price?ids=${ids}&vs_currencies=usd&include_market_cap=true&include_24hr_change=true`
            );
            
            const data = await response.json();
            
            // Mettre à jour les prix
            this.cryptoPrices = data;
            
            // Mettre à jour l'interface
            this.updatePriceDisplays();
            
            // Sauvegarder dans Firestore pour l'historique
            await this.savePricesToFirestore(data);
            
        } catch (error) {
            console.error('Erreur récupération prix:', error);
            this.useBackupPrices();
        }
    }
    
    useBackupPrices() {
        // Prix de secours en cas d'échec API
        const backupPrices = {
            bitcoin: { usd: 45000, usd_24h_change: 2.5 },
            ethereum: { usd: 3000, usd_24h_change: 1.8 },
            tether: { usd: 1, usd_24h_change: 0 },
            binancecoin: { usd: 400, usd_24h_change: 3.2 },
            solana: { usd: 100, usd_24h_change: 5.1 }
        };
        
        this.cryptoPrices = backupPrices;
        this.updatePriceDisplays();
    }
    
    updatePriceDisplays() {
        // Mettre à jour le prix Bitcoin dans le hero
        const btcPrice = document.getElementById('btcPrice');
        if (btcPrice && this.cryptoPrices.bitcoin) {
            btcPrice.textContent = `$${this.cryptoPrices.bitcoin.usd.toLocaleString()}`;
        }
        
        // Mettre à jour la table crypto
        this.renderCryptoTable();
    }
    
    renderCryptoTable() {
        const tableBody = document.getElementById('cryptoTableBody');
        if (!tableBody) return;
        
        tableBody.innerHTML = '';
        
        this.supportedCryptos.forEach(crypto => {
            const priceData = this.cryptoPrices[crypto.id];
            if (!priceData) return;
            
            const row = document.createElement('tr');
            const change24h = priceData.usd_24h_change || 0;
            const changeClass = change24h >= 0 ? 'positive' : 'negative';
            
            row.innerHTML = `
                <td>
                    <div class="crypto-info">
                        <div class="crypto-icon" style="background-color: ${crypto.color}">
                            ${crypto.symbol.charAt(0)}
                        </div>
                        <div class="crypto-details">
                            <strong>${crypto.name}</strong>
                            <span>${crypto.symbol}</span>
                        </div>
                    </div>
                </td>
                <td>$${priceData.usd.toLocaleString(undefined, { minimumFractionDigits: 2 })}</td>
                <td class="${changeClass}">${change24h >= 0 ? '+' : ''}${change24h.toFixed(2)}%</td>
                <td>$${(priceData.usd_market_cap / 1000000).toFixed(0)}M</td>
                <td>
                    <button class="btn-buy" onclick="cryptoAPI.buyCrypto('${crypto.symbol}')">
                        <i class="fas fa-shopping-cart"></i> Acheter
                    </button>
                    <button class="btn-sell" onclick="cryptoAPI.sellCrypto('${crypto.symbol}')">
                        <i class="fas fa-money-bill-wave"></i> Vendre
                    </button>
                </td>
            `;
            
            tableBody.appendChild(row);
        });
    }
    
    startPriceUpdates() {
        // Mettre à jour les prix toutes les 30 secondes
        setInterval(() => {
            this.fetchAllPrices();
        }, 30000);
        
        // Mettre à jour l'affichage toutes les 5 secondes
        setInterval(() => {
            this.updateLivePrices();
        }, 5000);
    }
    
    updateLivePrices() {
        // Ajouter un effet de mise à jour en temps réel
        document.querySelectorAll('#cryptoTableBody tr').forEach(row => {
            const priceCell = row.cells[1];
            const changeCell = row.cells[2];
            
            // Effet de flash pour les changements
            if (Math.random() > 0.7) {
                priceCell.classList.add('updating');
                setTimeout(() => priceCell.classList.remove('updating'), 500);
            }
        });
    }
    
    async savePricesToFirestore(prices) {
        try {
            await db.collection('cryptoPrices').add({
                prices: prices,
                timestamp: firebase.firestore.FieldValue.serverTimestamp()
            });
        } catch (error) {
            console.error('Erreur sauvegarde prix:', error);
        }
    }
    
    // Méthodes d'achat/vente
    async buyCrypto(symbol, amount) {
        const user = auth.currentUser;
        if (!user) {
            alert('Veuillez vous connecter pour acheter des cryptomonnaies');
            return;
        }
        
        const crypto = this.supportedCryptos.find(c => c.symbol === symbol);
        if (!crypto) return;
        
        const priceData = this.cryptoPrices[crypto.id];
        if (!priceData) return;
        
        // Calculer le prix total
        const pricePerUnit = priceData.usd;
        const totalCost = amount * pricePerUnit;
        
        // Vérifier le solde
        const userDoc = await db.collection('users').doc(user.uid).get();
        const userData = userDoc.data();
        
        if (userData.balance.usd < totalCost) {
            alert('Solde insuffisant');
            return;
        }
        
        // Créer la transaction
        const transaction = {
            userId: user.uid,
            type: 'buy',
            symbol: symbol,
            amount: amount,
            price: pricePerUnit,
            total: totalCost,
            status: 'pending',
            timestamp: firebase.firestore.FieldValue.serverTimestamp()
        };
        
        try {
            // Enregistrer la transaction
            await db.collection('transactions').add(transaction);
            
            // Mettre à jour le solde
            await db.collection('users').doc(user.uid).update({
                [`balance.${symbol.toLowerCase()}`]: firebase.firestore.FieldValue.increment(amount),
                'balance.usd': firebase.firestore.FieldValue.increment(-totalCost)
            });
            
            alert(`Achat réussi: ${amount} ${symbol}`);
            
        } catch (error) {
            console.error('Erreur achat:', error);
            alert('Erreur lors de l\'achat');
        }
    }
    
    async sellCrypto(symbol, amount) {
        const user = auth.currentUser;
        if (!user) {
            alert('Veuillez vous connecter pour vendre des cryptomonnaies');
            return;
        }
        
        const crypto = this.supportedCryptos.find(c => c.symbol === symbol);
        if (!crypto) return;
        
        const priceData = this.cryptoPrices[crypto.id];
        if (!priceData) return;
        
        // Vérifier le solde
        const userDoc = await db.collection('users').doc(user.uid).get();
        const userData = userDoc.data();
        const cryptoBalance = userData.balance[symbol.toLowerCase()] || 0;
        
        if (cryptoBalance < amount) {
            alert('Solde insuffisant');
            return;
        }
        
        // Calculer le montant total
        const pricePerUnit = priceData.usd;
        const totalValue = amount * pricePerUnit;
        
        // Créer la transaction
        const transaction = {
            userId: user.uid,
            type: 'sell',
            symbol: symbol,
            amount: amount,
            price: pricePerUnit,
            total: totalValue,
            status: 'pending',
            timestamp: firebase.firestore.FieldValue.serverTimestamp()
        };
        
        try {
            // Enregistrer la transaction
            await db.collection('transactions').add(transaction);
            
            // Mettre à jour le solde
            await db.collection('users').doc(user.uid).update({
                [`balance.${symbol.toLowerCase()}`]: firebase.firestore.FieldValue.increment(-amount),
                'balance.usd': firebase.firestore.FieldValue.increment(totalValue)
            });
            
            alert(`Vente réussie: ${amount} ${symbol}`);
            
        } catch (error) {
            console.error('Erreur vente:', error);
            alert('Erreur lors de la vente');
        }
    }
    
    // Échange entre cryptos
    async swapCrypto(fromSymbol, toSymbol, amount) {
        const user = auth.currentUser;
        if (!user) {
            alert('Veuillez vous connecter pour échanger des cryptomonnaies');
            return;
        }
        
        const fromCrypto = this.supportedCryptos.find(c => c.symbol === fromSymbol);
        const toCrypto = this.supportedCryptos.find(c => c.symbol === toSymbol);
        
        if (!fromCrypto || !toCrypto) return;
        
        const fromPrice = this.cryptoPrices[fromCrypto.id]?.usd;
        const toPrice = this.cryptoPrices[toCrypto.id]?.usd;
        
        if (!fromPrice || !toPrice) return;
        
        // Vérifier le solde
        const userDoc = await db.collection('users').doc(user.uid).get();
        const userData = userDoc.data();
        const fromBalance = userData.balance[fromSymbol.toLowerCase()] || 0;
        
        if (fromBalance < amount) {
            alert('Solde insuffisant');
            return;
        }
        
        // Calculer le taux de change
        const exchangeRate = fromPrice / toPrice;
        const receivedAmount = amount * exchangeRate;
        
        // Créer la transaction d'échange
        const transaction = {
            userId: user.uid,
            type: 'swap',
            fromSymbol: fromSymbol,
            toSymbol: toSymbol,
            amount: amount,
            receivedAmount: receivedAmount,
            exchangeRate: exchangeRate,
            status: 'pending',
            timestamp: firebase.firestore.FieldValue.serverTimestamp()
        };
        
        try {
            // Enregistrer la transaction
            await db.collection('transactions').add(transaction);
            
            // Mettre à jour les soldes
            await db.collection('users').doc(user.uid).update({
                [`balance.${fromSymbol.toLowerCase()}`]: firebase.firestore.FieldValue.increment(-amount),
                [`balance.${toSymbol.toLowerCase()}`]: firebase.firestore.FieldValue.increment(receivedAmount)
            });
            
            alert(`Échange réussi: ${amount} ${fromSymbol} → ${receivedAmount.toFixed(6)} ${toSymbol}`);
            
        } catch (error) {
            console.error('Erreur échange:', error);
            alert('Erreur lors de l\'échange');
        }
    }
    
    // Obtenir l'adresse de dépôt pour une crypto
    getDepositAddress(symbol) {
        const addresses = {
            'BTC': 'bc1qxy2kgdygjrsqtzq2n0yrf2493p83kkfjhx0wlh',
            'ETH': '0x742d35Cc6634C0532925a3b844Bc454e4438f44e',
            'USDT': '0x742d35Cc6634C0532925a3b844Bc454e4438f44e',
            'BNB': 'bnb1qxy2kgdygjrsqtzq2n0yrf2493p83kkfjhx0wlh',
            'TRX': 'TALB7yVxe9VTPmnVp21TUHuiajpxKNdnVf',
            'SOL': 'So11111111111111111111111111111111111111112',
            'MATIC': '0x742d35Cc6634C0532925a3b844Bc454e4438f44e'
        };
        
        return addresses[symbol] || 'Adresse non disponible';
    }
}

// Initialiser l'API Crypto
const cryptoAPI = new CryptoAPI();
window.cryptoAPI = cryptoAPI;
```

