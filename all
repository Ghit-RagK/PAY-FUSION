    <!-- Scripts -->
    <script src="assets/js/main.js"></script>
    <script src="assets/js/crypto-api.js"></script>
    <script src="assets/js/ui-manager.js"></script>
    <script src="firebase/firebase-config.js"></script>
    
    <script>
        // Initialisation de l'application
        document.addEventListener('DOMContentLoaded', function() {
            console.log('PayFusion - Initialisation...');
            
            // Corriger les problèmes de défilement
            fixScrollIssues();
            
            // Vérifier si l'utilisateur est admin
            checkAdminStatus();
            
            // Charger les prix crypto
            loadCryptoPrices();
            
            // Initialiser le chatbot
            initChatbot();
            
            // Initialiser la navigation mobile
            initMobileNavigation();
            
            // Mettre à jour les stats en temps réel
            updateLiveStats();
            
            // Démarrer les animations
            startAnimations();
        });
        
        // Fonction pour corriger les problèmes de défilement
        function fixScrollIssues() {
            // S'assurer que le body et html ont la bonne hauteur
            document.documentElement.style.height = '100%';
            document.body.style.height = '100%';
            document.body.style.overflowX = 'hidden';
            document.body.style.position = 'relative';
            
            // Empêcher le défilement horizontal
            window.addEventListener('scroll', function() {
                if (window.scrollX !== 0) {
                    window.scrollTo(0, window.scrollY);
                }
            });
            
            // Désactiver le zoom sur mobile
            document.addEventListener('touchmove', function(e) {
                if (e.touches.length > 1) {
                    e.preventDefault();
                }
            }, { passive: false });
        }
        
        // Initialiser la navigation mobile
        function initMobileNavigation() {
            const mobileBtn = document.querySelector('.mobile-menu-btn');
            const closeBtn = document.querySelector('.close-menu-btn');
            const overlay = document.querySelector('.mobile-menu-overlay');
            
            if (mobileBtn && overlay) {
                mobileBtn.addEventListener('click', function() {
                    overlay.style.display = 'block';
                    document.body.style.overflow = 'hidden';
                });
            }
            
            if (closeBtn && overlay) {
                closeBtn.addEventListener('click', function() {
                    overlay.style.display = 'none';
                    document.body.style.overflow = '';
                });
            }
            
            // Fermer en cliquant à l'extérieur
            if (overlay) {
                overlay.addEventListener('click', function(e) {
                    if (e.target === overlay) {
                        overlay.style.display = 'none';
                        document.body.style.overflow = '';
                    }
                });
            }
        }
        
        // Vérifier si l'utilisateur est l'admin suprême
        function checkAdminStatus() {
            const adminEmail = 'payfusion@admin.com';
            const adminBtn = document.getElementById('adminPanelBtn');
            const adminDiv = document.querySelector('.admin-access');
            
            // En production, vérifier via Firebase Auth
            // Pour le développement, vérifier dans localStorage
            const userEmail = localStorage.getItem('payfusion_user_email');
            
            if (userEmail === adminEmail) {
                adminDiv.style.display = 'block';
                adminBtn.addEventListener('click', function() {
                    window.location.href = 'admin-dashboard.html';
                });
            }
        }
        
        // Charger les prix crypto
        function loadCryptoPrices() {
            const btcPrice = document.getElementById('btcPrice');
            if (btcPrice) {
                // Simuler un prix pour la démo
                btcPrice.textContent = '$45,280.50';
                
                // Dans une vraie implémentation, appeler l'API
                // cryptoAPI.fetchAllPrices();
            }
        }
        
        // Initialiser le chatbot
        function initChatbot() {
            const toggleBtn = document.getElementById('chatbotToggle');
            const chatWindow = document.getElementById('chatbotWindow');
            const closeBtn = document.querySelector('.chatbot-close');
            
            if (toggleBtn && chatWindow) {
                toggleBtn.addEventListener('click', function() {
                    chatWindow.style.display = chatWindow.style.display === 'block' ? 'none' : 'block';
                });
            }
            
            if (closeBtn && chatWindow) {
                closeBtn.addEventListener('click', function() {
                    chatWindow.style.display = 'none';
                });
            }
        }
        
        // Mettre à jour les stats en temps réel
        function updateLiveStats() {
            // Simuler des mises à jour
            setInterval(() => {
                const btcPrice = document.getElementById('btcPrice');
                if (btcPrice) {
                    const current = parseFloat(btcPrice.textContent.replace(/[^0-9.-]+/g, ""));
                    const change = (Math.random() - 0.5) * 100;
                    const newPrice = current + change;
                    btcPrice.textContent = '$' + newPrice.toFixed(2);
                    
                    // Animation
                    btcPrice.style.color = change >= 0 ? '#00C853' : '#FF3B30';
                    setTimeout(() => {
                        btcPrice.style.color = '';
                    }, 1000);
                }
            }, 10000); // Mettre à jour toutes les 10 secondes
        }
        
        // Démarrer les animations
        function startAnimations() {
            // Animation des cartes au défilement
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };
            
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('animated');
                    }
                });
            }, observerOptions);
            
            // Observer les cartes
            document.querySelectorAll('.feature-card, .wise-card').forEach(card => {
                observer.observe(card);
            });
        }
        
        // Gestion du smooth scroll
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                const href = this.getAttribute('href');
                if (href === '#') return;
                
                const target = document.querySelector(href);
                if (target) {
                    e.preventDefault();
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
</body>
</html>
```

