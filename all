                    </button>
                </div>
            </div>

            <!-- Balance Totale -->
            <div class="total-balance">
                <div class="balance-card">
                    <div class="balance-info">
                        <h3>Balance Totale</h3>
                        <h2 id="totalBalanceAmount">$0.00</h2>
                        <div class="balance-change">
                            <span class="change-positive">+2.5%</span> aujourd'hui
                        </div>
