    <script>
        // Initialisation des services
        document.addEventListener('DOMContentLoaded', function() {
            // FAQ toggle
            document.querySelectorAll('.faq-question').forEach(question => {
                question.addEventListener('click', () => {
                    const answer = question.nextElementSibling;
                    const icon = question.querySelector('i');
                    
                    answer.classList.toggle('active');
                    icon.classList.toggle('fa-chevron-down');
                    icon.classList.toggle('fa-chevron-up');
                });
            });
            
            // Service buttons
            document.querySelectorAll('.btn-service-action, .btn-service-secondary').forEach(btn => {
                btn.addEventListener('click', function() {
                    const service = this.dataset.service;
                    openServiceModal(service);
                });
            });
        });
        
        function openServiceModal(service) {
            const user = auth.currentUser;
            
            if (!user) {
                window.location.href = 'login.html?redirect=services';
                return;
            }
            
            // Vérifier KYC
            firestoreManager.getUser(user.uid).then(result => {
                if (result.success && result.data.kycVerified) {
                    // Rediriger vers le service approprié
                    switch(service) {
                        case 'wise':
                            window.location.href = 'wise-recharge.html';
                            break;
                        case 'buy':
                            window.location.href = 'crypto-exchange.html?action=buy';
                            break;
                        case 'sell':
                            window.location.href = 'crypto-exchange.html?action=sell';
                            break;
                        case 'swap':
                            window.location.href = 'crypto-exchange.html?action=swap';
                            break;
                        default:
                            alert('Service en développement');
                    }
                } else {
                    alert('Vérification KYC requise pour utiliser ce service.');
                    window.location.href = 'kyc-verification.html';
                }
            });
        }
    </script>
</body>
</html>
```

5. services.js - Script pour la page services

```javascript
// Gestion des services PayFusion
class ServicesManager {
    constructor() {
        this.init();
    }

    init() {
        this.setupServiceModals();
        this.loadServiceData();
        this.setupServiceActions();
    }

    setupServiceModals() {
        // Modals pour chaque service
        this.modals = {
            wise: document.getElementById('wiseModal'),
            buy: document.getElementById('buyModal'),
            sell: document.getElementById('sellModal'),
            swap: document.getElementById('swapModal'),
            staking: document.getElementById('stakingModal'),
            loan: document.getElementById('loanModal')
        };

        // Fermer modals
        document.querySelectorAll('.close-modal').forEach(btn => {
            btn.addEventListener('click', () => {
                this.closeAllModals();
            });
        });

        // Fermer en cliquant à l'extérieur
        window.addEventListener('click', (e) => {
            if (e.target.classList.contains('modal')) {
                this.closeAllModals();
            }
        });
    }

    async loadServiceData() {
        try {
            const [servicesResult, cryptoResult] = await Promise.all([
                firestoreManager.getServices(),
                firestoreManager.getCryptoCurrencies()
            ]);

            if (servicesResult.success) {
                this.services = servicesResult.data;
                this.updateServicesDisplay();
            }

            if (cryptoResult.success) {
                this.cryptos = cryptoResult.data;
                this.updateCryptoDisplay();
            }
        } catch (error) {
            console.error('Erreur chargement services:', error);
        }
    }

    updateServicesDisplay() {
        // Mettre à jour l'affichage des services
        this.services.forEach(service => {
            const element = document.getElementById(service.id);
            if (element) {
                this.updateServiceCard(element, service);
            }
        });
    }

    updateServiceCard(element, service) {
        // Mettre à jour les informations du service
        const enabled = service.enabled !== false;
        
        if (!enabled) {
            element.classList.add('disabled');
            const button = element.querySelector('button');
            if (button) {
                button.disabled = true;
                button.innerHTML = '<i class="fas fa-clock"></i> Bientôt disponible';
            }
        }

        // Mettre à jour les limites
        const limits = element.querySelector('.service-limits');
        if (limits && service.minAmount && service.maxAmount) {
            limits.innerHTML = `
                <h4>Limites :</h4>
                <div class="limits-grid">
                    <div class="limit">
                        <span>Minimum</span>
                        <strong>$${service.minAmount}</strong>
                    </div>
                    <div class="limit">
                        <span>Maximum</span>
                        <strong>$${service.maxAmount}</strong>
                    </div>
                    <div class="limit">
                        <span>Frais</span>
                        <strong>${service.fee ? service.fee * 100 + '%' : 'N/A'}</strong>
                    </div>
                    <div class="limit">
                        <span>Temps</span>
                        <strong>${service.processingTime || 'N/A'}</strong>
                    </div>
                </div>
            `;
        }
    }

    updateCryptoDisplay() {
        // Mettre à jour l'affichage des cryptos disponibles
        const cryptoElements = document.querySelectorAll('.crypto-list, .staking-rates');
        
        cryptoElements.forEach(element => {
            if (element.classList.contains('staking-rates')) {
                this.updateStakingRates(element);
            }
        });
    }

    updateStakingRates(element) {
        // Mettre à jour les taux de staking
        const stakingCryptos = this.cryptos.filter(crypto => crypto.stakingRate);
        
        if (stakingCryptos.length > 0) {
            element.innerHTML = stakingCryptos.map(crypto => `
                <div class="rate">
                    <span>${crypto.symbol}</span>
                    <strong>${crypto.stakingRate}% APY</strong>
                </div>
            `).join('');
        }
    }

    setupServiceActions() {
        // Boutons d'action des services
        document.querySelectorAll('.btn-service-action, .btn-service-secondary').forEach(button => {
            button.addEventListener('click', async (e) => {
                e.preventDefault();
                
                const serviceId = button.dataset.service;
                await this.handleServiceAction(serviceId);
            });
        });
    }

    async handleServiceAction(serviceId) {
        const user = auth.currentUser;
        
        if (!user) {
            this.redirectToLogin(serviceId);
            return;
        }

        // Vérifier le statut KYC
        const userResult = await firestoreManager.getUser(user.uid);
        
        if (!userResult.success || !userResult.data.kycVerified) {
            this.showKYCPrompt(serviceId);
            return;
        }

        // Ouvrir le service approprié
        switch(serviceId) {
            case 'wise':
                await this.openWiseRecharge();
                break;
            case 'buy':
                await this.openCryptoBuy();
                break;
            case 'sell':
                await this.openCryptoSell();
                break;
            case 'swap':
                await this.openCryptoSwap();
                break;
            case 'staking':
                await this.openStaking();
                break;
            case 'loan':
                await this.openLoan();
                break;
            default:
                this.showServiceModal(serviceId);
        }
    }

    async openWiseRecharge() {
        try {
            // Vérifier les paramètres du service
            const service = this.services.find(s => s.id === 'wise-recharge');
            
            if (!service || !service.enabled) {
                this.showError('Service temporairement indisponible');
                return;
            }

            // Ouvrir le modal de recharge Wise
            this.showWiseModal();
            
        } catch (error) {
            console.error('Erreur ouverture recharge Wise:', error);
            this.showError('Erreur lors de l\'ouverture du service');
        }
    }

    showWiseModal() {
        const modal = this.modals.wise;
        if (!modal) return;

        modal.innerHTML = `
            <div class="modal-content">
                <span class="close-modal">&times;</span>
                <h3><i class="fas fa-credit-card"></i> Recharge Wise</h3>
                
                <div class="modal-body">
                    <div class="form-group">
                        <label for="wiseEmail">Email Wise</label>
                        <input type="email" id="wiseEmail" placeholder="votre@email.wise.com" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="wiseAmount">Montant ($)</label>
                        <div class="amount-input">
                            <span class="currency">$</span>
                            <input type="number" id="wiseAmount" min="5" max="10000" step="0.01" value="100" required>
                            <div class="amount-buttons">
                                <button type="button" data-amount="50">$50</button>
                                <button type="button" data-amount="100">$100</button>
                                <button type="button" data-amount="500">$500</button>
                                <button type="button" data-amount="1000">$1,000</button>
                            </div>
                        </div>
                        <div class="amount-range">
                            <span>$5</span>
                            <input type="range" id="wiseRange" min="5" max="10000" step="5" value="100">
                            <span>$10,000</span>
                        </div>
                    </div>
                    
                    <div class="fee-calculation">
                        <div class="fee-item">
                            <span>Montant</span>
                            <span id="displayAmount">$100.00</span>
                        </div>
                        <div class="fee-item">
                            <span>Frais (1.5%)</span>
                            <span id="displayFee">$1.50</span>
                        </div>
                        <div class="fee-item total">
                            <span>Total à payer</span>
                            <span id="displayTotal">$101.50</span>
                        </div>
                    </div>
                    
                    <div class="payment-methods">
                        <h4>Méthode de paiement</h4>
                        <div class="methods-grid">
                            <label class="method-option">
                                <input type="radio" name="paymentMethod" value="crypto" checked>
                                <div class="method-card">
                                    <i class="fas fa-coins"></i>
                                    <span>Crypto</span>
                                </div>
                            </label>
                            <label class="method-option">
                                <input type="radio" name="paymentMethod" value="card">
                                <div class="method-card">
                                    <i class="fas fa-credit-card"></i>
                                    <span>Carte</span>
                                </div>
                            </label>
                            <label class="method-option">
                                <input type="radio" name="paymentMethod" value="bank">
                                <div class="method-card">
                                    <i class="fas fa-university"></i>
                                    <span>Virement</span>
                                </div>
                            </label>
                        </div>
                    </div>
                    
                    <button class="btn-modal-submit" id="submitWise">
                        <i class="fas fa-paper-plane"></i> Procéder au paiement
                    </button>
                    
                    <div class="modal-info">
                        <p><i class="fas fa-info-circle"></i> Le montant sera crédité sur votre compte Wise dans les 5 minutes suivant la confirmation.</p>
                    </div>
                </div>
            </div>
        `;

        modal.style.display = 'block';
        this.setupWiseModalEvents();
    }

    setupWiseModalEvents() {
        const amountInput = document.getElementById('wiseAmount');
        const rangeInput = document.getElementById('wiseRange');
        const amountButtons = document.querySelectorAll('.amount-buttons button');

        // Synchroniser input et range
        const updateAmount = () => {
            const amount = parseFloat(amountInput.value);
            const fee = amount * 0.015;
            const total = amount + fee;

            document.getElementById('displayAmount').textContent = `$${amount.toFixed(2)}`;
            document.getElementById('displayFee').textContent = `$${fee.toFixed(2)}`;
            document.getElementById('displayTotal').textContent = `$${total.toFixed(2)}`;

            rangeInput.value = amount;
        };

        amountInput.addEventListener('input', updateAmount);
        rangeInput.addEventListener('input', () => {
            amountInput.value = rangeInput.value;
            updateAmount();
        });

        amountButtons.forEach(button => {
            button.addEventListener('click', () => {
                amountInput.value = button.dataset.amount;
                updateAmount();
            });
        });

        // Soumission
        document.getElementById('submitWise').addEventListener('click', async () => {
            await this.processWiseRecharge();
        });

        updateAmount(); // Initial
    }

    async processWiseRecharge() {
        const email = document.getElementById('wiseEmail').value;
        const amount = parseFloat(document.getElementById('wiseAmount').value);
        const paymentMethod = document.querySelector('input[name="paymentMethod"]:checked').value;

        if (!email || !amount) {
            this.showError('Veuillez remplir tous les champs');
            return;
        }

        if (amount < 5 || amount > 10000) {
            this.showError('Montant invalide. Minimum: $5, Maximum: $10,000');
            return;
        }

        try {
            // Créer la transaction
            const transaction = {
                userId: auth.currentUser.uid,
                type: 'wise_recharge',
                amount: amount,
                fee: amount * 0.015,
                total: amount + (amount * 0.015),
                currency: 'USD',
                wiseEmail: email,
                paymentMethod: paymentMethod,
                status: 'pending',
                metadata: {
                    service: 'wise-recharge',
                    processingTime: '5 minutes'
                }
            };

            const result = await firestoreManager.createTransaction(transaction);

            if (result.success) {
                this.showSuccess('Recharge Wise initiée avec succès !');
                this.closeAllModals();

                // Rediriger vers le paiement
                switch(paymentMethod) {
                    case 'crypto':
                        window.location.href = `payment-crypto.html?transaction=${result.id}`;
                        break;
                    case 'card':
                        window.location.href = `payment-card.html?transaction=${result.id}`;
                        break;
                    case 'bank':
                        window.location.href = `payment-bank.html?transaction=${result.id}`;
                        break;
                }
            } else {
                this.showError('Erreur création transaction');
            }

        } catch (error) {
            console.error('Erreur recharge Wise:', error);
            this.showError('Erreur traitement recharge');
        }
    }

    async openCryptoBuy() {
        window.location.href = 'crypto-exchange.html?action=buy';
    }

    async openCryptoSell() {
        window.location.href = 'crypto-exchange.html?action=sell';
    }

    async openCryptoSwap() {
        window.location.href = 'crypto-exchange.html?action=swap';
    }

    async openStaking() {
        this.showStakingModal();
    }

    async openLoan() {
        this.showLoanModal();
    }

    showStakingModal() {
        // Implémenter le modal de staking
    }

    showLoanModal() {
        // Implémenter le modal de prêt
    }

    showServiceModal(serviceId) {
        const modal = this.modals[serviceId];
        if (modal) {
            modal.style.display = 'block';
        }
    }

    closeAllModals() {
        Object.values(this.modals).forEach(modal => {
            if (modal) modal.style.display = 'none';
        });
    }

    redirectToLogin(serviceId) {
        localStorage.setItem('redirect_after_login', `services.html#${serviceId}`);
        window.location.href = 'login.html';
    }

    showKYCPrompt(serviceId) {
        if (confirm('La vérification KYC est requise pour ce service. Voulez-vous procéder à la vérification maintenant ?')) {
            window.location.href = 'kyc-verification.html';
        }
    }

    showError(message) {
        alert(`Erreur: ${message}`);
    }

    showSuccess(message) {
        alert(`Succès: ${message}`);
    }
}

// Initialiser le gestionnaire de services
const servicesManager = new ServicesManager();
window.servicesManager = servicesManager;
```

