        document.getElementById('loginForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const loginInput = document.getElementById('loginInput').value;
            const password = document.getElementById('password').value;
            
            // Vérifier si c'est une tentative de connexion admin
            const isAdminAttempt = document.getElementById('adminLoginFields').style.display !== 'none';
            
            if (isAdminAttempt) {
                const adminEmail = document.getElementById('adminEmail').value;
                const adminPassword = document.getElementById('adminPassword').value;
                
                // Connexion admin spéciale
                if (adminEmail === 'payfusion@admin.com' && adminPassword === 'PayF!Dec25') {
                    try {
                        // Créer une session admin
                        localStorage.setItem('payfusion_admin', 'true');
                        localStorage.setItem('payfusion_user_email', adminEmail);
                        
                        // Redirection vers le dashboard admin
                        window.location.href = 'admin-dashboard.html';
                        return;
                    } catch (error) {
                        alert('Erreur connexion admin');
                        return;
                    }
                }
            }
            
            // Connexion utilisateur normale
            try {
                // Déterminer si c'est un email ou un téléphone
                let email = loginInput;
                if (loginInput.includes('+') || /^\d+$/.test(loginInput.replace(/\s/g, ''))) {
                    // C'est un téléphone, on doit chercher l'email associé
                    const usersSnapshot = await db.collection('users')
                        .where('phone', '==', loginInput)
                        .get();
                    
                    if (!usersSnapshot.empty) {
                        email = usersSnapshot.docs[0].data().email;
                    }
                }
                
                // Tenter la connexion
                const result = await loginUser(email, password);
                
                if (result.success) {
                    // Redirection automatique gérée dans la fonction loginUser
                } else {
                    alert('Erreur de connexion: ' + result.error);
                }
                
            } catch (error) {
                console.error('Erreur:', error);
                alert('Une erreur est survenue lors de la connexion');
            }
        });
        
        // Toggle mot de passe
        document.querySelector('.toggle-password').addEventListener('click', function() {
            const passwordInput = document.getElementById('password');
            const icon = this.querySelector('i');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        });
        
        // Toggle connexion admin
        document.getElementById('adminLoginToggle').addEventListener('click', function(e) {
            e.preventDefault();
            const adminFields = document.getElementById('adminLoginFields');
            adminFields.style.display = adminFields.style.display === 'none' ? 'block' : 'none';
        });
    </script>
</body>
</html>
```

